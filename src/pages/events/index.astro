---
import BaseLayout from '@/layouts/BaseLayout.astro';
import StatCard from '@/components/cards/StatCard.astro';
import EventsMapChart from '@/components/charts/EventsMapChart.astro';
import EventsHistoryChart from '@/components/charts/EventsHistoryChart.astro';
import SecondaryCTA from '@/components/cards/SecondaryCTA.astro';
import DataSourcesSection from '@/components/DataSourcesSection.astro';
import SourceInfo from '@/components/SourceInfo.astro';
import { formatNumber, n8nUrls } from '@/lib/utils/formatters';
import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

// Define types for events data
interface LumaEvent {
  id: string;
  name: string;
  description?: string;
  startDate: string;
  endDate?: string;
  url: string;
  location: {
    name: string;
    address?: string;
    city?: string;
    country?: string;
    coordinates?: {
      lat: number;
      lng: number;
    };
  };
  isOnline: boolean;
  registrations: number;
}

interface HostStats {
  name: string;
  lumaUsername: string;
  lumaUrl: string;
  avatarUrl?: string;
  n8nUsername?: string;
  verified?: boolean;
  eventCount: number;
  totalRegistrations: number;
  countries: string[];
  cities: string[];
}

interface EventsData {
  lastUpdated: string;
  upcoming: LumaEvent[];
  past: LumaEvent[];
  byMonth: Array<{ month: string; count: number; registrations: number }>;
  byCountry: Array<{
    country: string;
    count: number;
    registrations: number;
    coordinates?: { lat: number; lng: number };
  }>;
  stats: {
    totalEvents: number;
    totalRegistrations: number;
    upcomingCount: number;
    pastCount: number;
    countriesCount: number;
    onlineCount: number;
    firstEventDate: string;
    lastEventDate: string;
  };
  locations: Array<{
    name: string;
    city: string;
    country: string;
    lat: number;
    lng: number;
    eventCount: number;
    totalRegistrations: number;
  }>;
  hosts?: HostStats[];
}

// Load events data
let eventsData: EventsData | null = null;
const dataPath = join(process.cwd(), 'public', 'data', 'history', 'events.json');

if (existsSync(dataPath)) {
  try {
    eventsData = JSON.parse(readFileSync(dataPath, 'utf-8'));
  } catch (e) {
    console.warn('Could not load events data:', e);
  }
}

// Country name to ISO 2-letter code mapping
const countryToCode: Record<string, string> = {
  'United States': 'US',
  'Germany': 'DE',
  'Austria': 'AT',
  'Netherlands': 'NL',
  'Spain': 'ES',
  'United Kingdom': 'GB',
  'France': 'FR',
  'Denmark': 'DK',
  'Switzerland': 'CH',
  'South Korea': 'KR',
  'Poland': 'PL',
  'Israel': 'IL',
  'Hungary': 'HU',
  'Canada': 'CA',
  'Kenya': 'KE',
  'Italy': 'IT',
  'Turkey': 'TR',
  'UAE': 'AE',
  'Portugal': 'PT',
  'Ghana': 'GH',
  'Belgium': 'BE',
  'Australia': 'AU',
  'Brazil': 'BR',
  'Japan': 'JP',
  'India': 'IN',
  'Mexico': 'MX',
  'Argentina': 'AR',
  'Sweden': 'SE',
  'Norway': 'NO',
  'Finland': 'FI',
  'Ireland': 'IE',
  'Czech Republic': 'CZ',
  'Romania': 'RO',
  'Greece': 'GR',
  'Singapore': 'SG',
  'New Zealand': 'NZ',
  'South Africa': 'ZA',
  'Nigeria': 'NG',
  'Colombia': 'CO',
  'Chile': 'CL',
  'Peru': 'PE',
  'Thailand': 'TH',
  'Vietnam': 'VN',
  'Philippines': 'PH',
  'Indonesia': 'ID',
  'Malaysia': 'MY',
  'Taiwan': 'TW',
  'Hong Kong': 'HK',
  'China': 'CN',
  'Russia': 'RU',
  'Ukraine': 'UA',
  'Croatia': 'HR',
  'Slovakia': 'SK',
  'Slovenia': 'SI',
  'Bulgaria': 'BG',
  'Serbia': 'RS',
  'Lithuania': 'LT',
  'Latvia': 'LV',
  'Estonia': 'EE',
  'Luxembourg': 'LU',
  'Iceland': 'IS',
  'Malta': 'MT',
  'Cyprus': 'CY',
  'Online': 'üåê', // Special case for online events
};

// Convert ISO country code to emoji flag
function getCountryFlag(countryName: string): string {
  const code = countryToCode[countryName];
  if (!code) return '';
  if (code === 'üåê') return code; // Online events

  // Convert 2-letter code to regional indicator symbols
  // Each letter A-Z maps to regional indicator symbol starting at 0x1F1E6
  const codePoints = [...code.toUpperCase()].map(
    char => 0x1F1E6 + char.charCodeAt(0) - 65
  );
  return String.fromCodePoint(...codePoints);
}

// Format date for display
function formatEventDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    weekday: 'short',
    month: 'short',
    day: 'numeric',
    year: 'numeric',
  });
}

function formatEventTime(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleTimeString('en-US', {
    hour: 'numeric',
    minute: '2-digit',
    hour12: true,
  });
}

// Get current month for filtering (exclude future data from charts)
const now = new Date();
const currentMonth = `${now.getFullYear()}-${String(now.getMonth() + 1).padStart(2, '0')}`;

// Get upcoming events sorted by date
const upcomingEvents = eventsData?.upcoming || [];
const locations = eventsData?.locations || [];
// Filter out future months from the chart data
const byMonth = (eventsData?.byMonth || []).filter(m => m.month <= currentMonth);
const byCountry = eventsData?.byCountry || [];
const stats = eventsData?.stats || {
  totalEvents: 0,
  totalRegistrations: 0,
  upcomingCount: 0,
  pastCount: 0,
  countriesCount: 0,
  onlineCount: 0,
  inPersonCount: 0,
  pastInPersonCount: 0,
  pastInPersonRegistrations: 0,
  pastOnlineCount: 0,
  pastOnlineRegistrations: 0,
};

// Calculate average participants per event type (past events only)
// Split by online vs in-person since they have very different scales
const avgInPersonParticipants = stats.pastInPersonCount > 0
  ? Math.round(stats.pastInPersonRegistrations / stats.pastInPersonCount)
  : 0;
const avgOnlineParticipants = stats.pastOnlineCount > 0
  ? Math.round(stats.pastOnlineRegistrations / stats.pastOnlineCount)
  : 0;

// Prepare full byMonth data with split counts for the chart
// The chart component handles filtering by date and treating 0 registrations as missing
const byMonthFull = byMonth.map(m => ({
  month: m.month,
  count: m.count || 0,
  registrations: m.registrations || 0,
  inPersonCount: m.inPersonCount || 0,
  inPersonRegistrations: m.inPersonRegistrations || 0,
  onlineCount: m.onlineCount || 0,
  onlineRegistrations: m.onlineRegistrations || 0,
}));

// Get unique country codes for map highlighting (exclude "Online")
const highlightedCountries = [...new Set(
  byCountry
    .map(c => countryToCode[c.country])
    .filter((code): code is string => !!code && code !== 'üåê')
)];

// Get hosts data
const hosts = eventsData?.hosts || [];

// Extract sparkline data (last 12 months of events)
const eventsSparklineData = byMonthFull.slice(-12).map(m => m.count);
const registrationsSparklineData = byMonthFull.slice(-12).map(m => m.registrations);

// Helper to get host profile URL (n8n.io if mapped, Luma fallback)
const getHostUrl = (host: HostStats) =>
  host.n8nUsername
    ? n8nUrls.creator(host.n8nUsername)
    : host.lumaUrl;

// Helper to format cities with "+X more" for hosts with many locations
const formatHostCities = (cities: string[]) => {
  if (cities.length === 0) return 'Online';
  if (cities.length <= 3) return cities.join(', ');
  return `${cities.slice(0, 3).join(', ')} +${cities.length - 3} more`;
};
---

<BaseLayout title="Community Events" description="Upcoming n8n meetups and community events worldwide. Find events by location and track community gathering trends.">
  <div class="container-narrow py-12">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Community Events</h1>
      <p class="text-gray-400">
        n8n community meetups, workshops, and events from the
        <a href="https://luma.com/n8n-events" target="_blank" rel="noopener" class="text-n8n-primary hover:underline">official n8n calendar</a>
      </p>
    </div>

    <!-- Stats Overview -->
    <section class="mb-12">
      <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
        <StatCard
          label="Past Events"
          value={stats.pastCount}
          sparklineData={eventsSparklineData}
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
        <StatCard
          label="Total Registrations"
          value={formatNumber(stats.totalRegistrations)}
          sparklineData={registrationsSparklineData}
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
        <StatCard
          label="Avg/In-Person Event"
          value={avgInPersonParticipants}
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
        <StatCard
          label="Avg/Online Event"
          value={avgOnlineParticipants}
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
        <StatCard
          label="Upcoming Events"
          value={stats.upcomingCount}
          href="https://luma.com/n8n-events"
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
        <StatCard
          label="Countries"
          value={stats.countriesCount}
          source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }}
        />
      </div>
    </section>

    <!-- Events Over Time (Main Chart - Block 2) -->
    {byMonthFull.length > 1 && (
      <section class="mb-12">
        <div class="flex items-center gap-3 mb-6">
          <svg class="w-6 h-6 text-n8n-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <h2 class="text-2xl font-bold text-white">Events Over Time</h2>
        </div>
        <p class="text-gray-400 mb-6">
          Monthly breakdown of n8n community events. Bars show event counts (stacked: in-person + online), lines show participant registrations.
        </p>
        <EventsHistoryChart data={byMonthFull} startMonth="2024-06" source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }} />
      </section>
    )}

    <!-- World Map -->
    {locations.length > 0 && (
      <section class="mb-12">
        <div class="flex items-center gap-3 mb-6">
          <svg class="w-6 h-6 text-n8n-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <h2 class="text-2xl font-bold text-white">Event Locations</h2>
        </div>
        <p class="text-gray-400 mb-6">
          Where n8n community events are happening. Hover over markers for details.
        </p>
        <EventsMapChart locations={locations} highlightedCountries={highlightedCountries} source={{ source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" }} />
      </section>
    )}

    <!-- Events by Country -->
    {byCountry.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-6 flex items-center gap-2">
          Events by Country
          <SourceInfo source="Luma" url="https://lu.ma/n8n-events" note="scraped daily" position="inline" />
        </h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
          {byCountry.slice(0, 8).map((country) => {
            const code = countryToCode[country.country]?.toLowerCase();
            const flagUrl = code && code !== 'üåê' ? `https://flagcdn.com/w320/${code}.png` : null;
            return (
              <div
                class="relative overflow-hidden rounded-lg border-2 border-[#0d1117]"
                style={flagUrl ? `background-image: url('${flagUrl}'); background-size: cover; background-position: center;` : ''}
              >
                {/* Dark overlay for readability */}
                <div class="absolute inset-0 bg-black/80"></div>
                {/* Content */}
                <div class="relative z-10 p-4">
                  <div class="text-lg font-semibold text-white">{country.country}</div>
                  <div class="text-3xl font-bold text-white mt-2">{country.count}</div>
                  <div class="text-sm text-gray-300">event{country.count !== 1 ? 's' : ''}</div>
                </div>
              </div>
            );
          })}
        </div>
      </section>
    )}

    <!-- Top Event Hosts -->
    {hosts.length > 0 && (
      <section class="mb-12">
        <h2 class="text-2xl font-bold text-white mb-2 flex items-center gap-2">
          Top Event Hosts
          <SourceInfo source="Luma" url="https://lu.ma/n8n-events" note="scraped daily" position="inline" />
        </h2>
        <p class="text-gray-400 mb-4">Community members organizing the most events</p>

        <div class="ranking-grid" style={`--ranking-rows: ${Math.ceil(Math.min(hosts.length, 10) / 2)}`}>
          {hosts.slice(0, 10).map((host, index) => (
            <a
              href={getHostUrl(host)}
              target="_blank"
              rel="noopener noreferrer"
              class="card flex items-center gap-3 hover:border-n8n-primary/30 transition-colors py-3"
              data-umami-event="host-click"
              data-umami-event-target={host.n8nUsername || host.lumaUsername}
            >
              <div class="text-lg font-bold text-n8n-primary w-6">#{index + 1}</div>
              {host.avatarUrl ? (
                <img
                  src={host.avatarUrl}
                  alt={host.name}
                  class="w-10 h-10 rounded-full object-cover flex-shrink-0"
                  loading="lazy"
                />
              ) : (
                <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-sm flex-shrink-0">
                  {host.name.charAt(0).toUpperCase()}
                </div>
              )}
              <div class="flex-1 min-w-0">
                <div class="flex items-center gap-1">
                  <span class="font-medium text-white text-sm truncate">{host.name}</span>
                  {host.verified && (
                    <svg class="w-3 h-3 text-n8n-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  )}
                </div>
                <div class="text-xs text-gray-500 truncate">{formatHostCities(host.cities)}</div>
              </div>
              <div class="text-right flex-shrink-0">
                <div class="text-sm font-medium text-green-400">{host.eventCount} event{host.eventCount !== 1 ? 's' : ''}</div>
                <div class="text-xs text-gray-500">{formatNumber(host.totalRegistrations)} reg.</div>
              </div>
            </a>
          ))}
        </div>
        <p class="text-xs text-gray-500 mt-4 text-center">
          This list features community organizers only. n8n employees and partner companies are excluded.
        </p>
      </section>
    )}

    <!-- Upcoming Events List (limited preview) -->
    {upcomingEvents.length > 0 && (
      <section class="mb-12">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <svg class="w-6 h-6 text-n8n-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
            </svg>
            <h2 class="text-2xl font-bold text-white">Upcoming Events</h2>
          </div>
          <a
            href="https://lu.ma/n8n-events"
            target="_blank"
            rel="noopener noreferrer"
            class="text-sm text-n8n-primary hover:underline flex items-center gap-1"
          >
            View all on Luma
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
            </svg>
          </a>
        </div>

        <div class="space-y-3">
          {upcomingEvents.slice(0, 5).map((event) => (
            <a
              href={event.url || `https://lu.ma/n8n-events`}
              target="_blank"
              rel="noopener noreferrer"
              class="card block hover:border-n8n-primary/50 hover:bg-gray-800/30 transition-all group py-3"
            >
              <div class="flex flex-col md:flex-row md:items-center gap-3">
                <!-- Date Badge -->
                <div class="flex-shrink-0 text-center md:w-16">
                  <div class="inline-block md:block bg-n8n-primary/20 rounded-lg px-2 py-1">
                    <div class="text-n8n-primary font-bold">
                      {new Date(event.startDate).getDate()}
                    </div>
                    <div class="text-xs text-gray-400 uppercase">
                      {new Date(event.startDate).toLocaleDateString('en-US', { month: 'short' })}
                    </div>
                  </div>
                </div>

                <!-- Event Details -->
                <div class="flex-grow min-w-0">
                  <h3 class="text-white font-semibold group-hover:text-n8n-primary transition-colors truncate text-sm">
                    {event.name}
                  </h3>
                  <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-1 text-xs text-gray-400">
                    <span class="flex items-center gap-1">
                      <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                      </svg>
                      {event.isOnline ? 'Online' : `${event.location.city || event.location.name}${event.location.country ? `, ${event.location.country}` : ''}`}
                    </span>
                    {event.registrations && event.registrations > 0 && (
                      <span class="flex items-center gap-1">
                        <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                        </svg>
                        {formatNumber(event.registrations)} registered
                      </span>
                    )}
                  </div>
                </div>

                <!-- Arrow -->
                <div class="flex-shrink-0 hidden md:block">
                  <svg class="w-4 h-4 text-gray-600 group-hover:text-n8n-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                  </svg>
                </div>
              </div>
            </a>
          ))}
        </div>

        {upcomingEvents.length > 5 && (
          <p class="text-center text-gray-400 mt-4 text-sm">
            +{upcomingEvents.length - 5} more events on <a href="https://lu.ma/n8n-events" target="_blank" rel="noopener" class="text-n8n-primary hover:underline">Luma</a>
          </p>
        )}
      </section>
    )}

    <!-- Call to Action -->
    <SecondaryCTA
      title="Want to attend or host an event?"
      description="Join the n8n community and connect with automation enthusiasts worldwide."
      actions={[
        {
          label: "Browse Events on Luma",
          href: "https://luma.com/n8n-events",
          variant: "primary",
          external: true,
        },
        {
          label: "Contact community@n8n.io",
          href: "mailto:community@n8n.io",
          variant: "secondary",
        }
      ]}
    >
      <svg slot="icon" class="w-12 h-12 mx-auto mb-4 text-n8n-primary/50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </SecondaryCTA>

    <!-- Data Sources Attribution -->
    <DataSourcesSection sources={[
      { label: "Events", source: "Luma", url: "https://lu.ma/n8n-events", note: "scraped daily" },
    ]} />
  </div>
</BaseLayout>
