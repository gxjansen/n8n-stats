---
import BaseLayout from '@/layouts/BaseLayout.astro';
import StatCard from '@/components/cards/StatCard.astro';
import MilestonePrediction from '@/components/cards/MilestonePrediction.astro';
import CreatorsHistoryChart from '@/components/charts/CreatorsHistoryChart.astro';
import { formatNumber, n8nUrls } from '@/lib/utils/formatters';
import { predictMilestone, getNextMilestones } from '@/lib/utils/predictions';
import { readFileSync } from 'fs';
import { join } from 'path';

// Load creators data from history
interface Creator {
  username: string;
  name: string;
  verified: boolean;
  avatar: string;
  bio: string;
  links: string[];
  templateCount: number;
  totalViews: number;
  totalInserters: number;
  monthlyViews: number;
  monthlyInserters: number;
  weeklyViews: number;
  weeklyInserters: number;
}

interface CreatorsData {
  lastUpdated: string;
  totalCreators: number;
  verifiedCreators: number;
  totalViews: number;
  totalInserters: number;
  creators: Creator[];
  _attribution: {
    source: string;
    url: string;
    fetchedAt: string;
  };
}

let creatorsData: CreatorsData;
try {
  const dataPath = join(process.cwd(), 'public', 'data', 'history', 'creators.json');
  creatorsData = JSON.parse(readFileSync(dataPath, 'utf-8'));
} catch (e) {
  console.error('Error loading creators data:', e);
  creatorsData = {
    lastUpdated: new Date().toISOString(),
    totalCreators: 0,
    verifiedCreators: 0,
    totalViews: 0,
    totalInserters: 0,
    creators: [],
    _attribution: { source: 'n8n Arena', url: 'https://n8narena.com', fetchedAt: '' },
  };
}

const { creators, totalCreators, verifiedCreators, totalViews, totalInserters, _attribution } = creatorsData;

// Load historical data for predictions and sparklines
let creatorHistory: Array<{ date: string; value: number }> = [];
let creatorSparklineData: number[] = [];
try {
  const statsPath = join(process.cwd(), 'public', 'data', 'history', 'creators-stats.json');
  const statsData = JSON.parse(readFileSync(statsPath, 'utf-8'));
  // Use weekly data for predictions
  creatorHistory = statsData.weekly?.map((d: any) => ({
    date: d.date,
    value: d.total,
  })) || [];
  // Extract last 12 weeks for sparkline
  creatorSparklineData = statsData.weekly?.slice(-12).map((d: any) => d.total) || [];
} catch (e) {
  console.warn('Could not load creators history for predictions');
}

// Calculate milestone predictions for creators
const creatorMilestones = getNextMilestones(totalCreators, 'creators');
const creatorPredictions = creatorMilestones.map(milestone =>
  predictMilestone(creatorHistory, milestone, { lookbackMonths: 3, minDataPoints: 4 })
);

// Get top creators by different metrics
const topByInserters = [...creators].sort((a, b) => b.totalInserters - a.totalInserters).slice(0, 10);
const topByViews = [...creators].sort((a, b) => b.totalViews - a.totalViews).slice(0, 10);
const topByTemplates = [...creators].sort((a, b) => b.templateCount - a.templateCount).slice(0, 10);
const trendingWeekly = [...creators].sort((a, b) => b.weeklyInserters - a.weeklyInserters).slice(0, 10);

// Helper to get n8n profile URL (with UTM tracking)
const getProfileUrl = (username: string) => n8nUrls.creator(username);
---

<BaseLayout title="Creator Leaderboard" description="Top n8n workflow template creators ranked by engagement">
  <div class="container-narrow py-12">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Creator Leaderboard</h1>
      <p class="text-gray-400">
        Top n8n workflow template creators ranked by engagement.
        Data powered by <a href={_attribution.url} target="_blank" rel="noopener" class="text-n8n-primary hover:underline">{_attribution.source}</a>.
      </p>
    </div>

    <!-- Overall Stats + Milestones (Hero Block) -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Overview</h2>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <StatCard label="Total Creators" value={totalCreators} sparklineData={creatorSparklineData} />
        <StatCard label="Verified Creators" value={verifiedCreators} />
        <StatCard label="Total Views" value={totalViews} />
        <StatCard label="Total Inserters" value={totalInserters} />
      </div>

      {/* Creator Milestones - within hero block */}
      {creatorPredictions.length > 0 && creatorPredictions.some(p => p.predictedDate) && (
        <div class="mt-8">
          <h3 class="text-xl font-bold text-white mb-2">Creator Milestones</h3>
          <p class="text-gray-400 mb-4">
            Predicted dates based on recent growth trends
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {creatorPredictions.map((pred) => (
              <MilestonePrediction
                label="Total Creators"
                milestone={pred.milestone}
                predictedDate={pred.predictedDate}
                daysUntil={pred.daysUntil}
                confidence={pred.confidence}
                currentValue={pred.currentValue}
                icon="ðŸŽ¨"
              />
            ))}
          </div>
        </div>
      )}
    </section>

    <!-- Creator Growth Chart -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Creator Growth</h2>
      <p class="text-gray-400 mb-4">Week-by-week growth of template creators since November 2024.</p>
      <CreatorsHistoryChart />
    </section>

    <!-- Trending This Week -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Trending This Week</h2>
      <p class="text-gray-400 mb-4">Creators with the most workflow insertions in the past 7 days.</p>
      <div class="ranking-grid" style={`--ranking-rows: ${Math.ceil(trendingWeekly.length / 2)}`}>
        {trendingWeekly.map((creator, index) => (
          <a
            href={getProfileUrl(creator.username)}
            target="_blank"
            rel="noopener noreferrer"
            class="card flex items-center gap-3 hover:border-n8n-primary/30 transition-colors"
          >
            <div class="text-lg font-bold text-n8n-primary w-6">#{index + 1}</div>
            {creator.avatar ? (
              <img src={creator.avatar} alt={creator.name} class="w-10 h-10 rounded-full" />
            ) : (
              <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-sm">
                {creator.name.charAt(0).toUpperCase()}
              </div>
            )}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1">
                <span class="font-medium text-white truncate text-sm">{creator.name}</span>
                {creator.verified && (
                  <svg class="w-3 h-3 text-n8n-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                )}
              </div>
            </div>
            <div class="text-sm font-medium text-green-400">{formatNumber(creator.weeklyInserters)}</div>
          </a>
        ))}
      </div>
    </section>

    <!-- Top by Total Inserters -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Top by Total Inserters</h2>
      <p class="text-gray-400 mb-4">Creators whose workflows have been used the most (all time).</p>
      <div class="ranking-grid" style={`--ranking-rows: ${Math.ceil(topByInserters.length / 2)}`}>
        {topByInserters.map((creator, index) => (
          <a
            href={getProfileUrl(creator.username)}
            target="_blank"
            rel="noopener noreferrer"
            class="card flex items-center gap-3 hover:border-n8n-primary/30 transition-colors"
          >
            <div class="text-lg font-bold text-gray-500 w-6">#{index + 1}</div>
            {creator.avatar ? (
              <img src={creator.avatar} alt={creator.name} class="w-10 h-10 rounded-full" />
            ) : (
              <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-sm">
                {creator.name.charAt(0).toUpperCase()}
              </div>
            )}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1">
                <span class="font-medium text-white truncate text-sm">{creator.name}</span>
                {creator.verified && (
                  <svg class="w-3 h-3 text-n8n-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                )}
              </div>
            </div>
            <div class="text-sm font-medium text-gray-400">{formatNumber(creator.totalInserters)}</div>
          </a>
        ))}
      </div>
    </section>

    <!-- Top by Views -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Top by Views</h2>
      <p class="text-gray-400 mb-4">Creators with the most workflow views.</p>
      <div class="ranking-grid" style={`--ranking-rows: ${Math.ceil(topByViews.length / 2)}`}>
        {topByViews.map((creator, index) => (
          <a
            href={getProfileUrl(creator.username)}
            target="_blank"
            rel="noopener noreferrer"
            class="card flex items-center gap-3 hover:border-n8n-primary/30 transition-colors"
          >
            <div class="text-lg font-bold text-gray-500 w-6">#{index + 1}</div>
            {creator.avatar ? (
              <img src={creator.avatar} alt={creator.name} class="w-10 h-10 rounded-full" />
            ) : (
              <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-sm">
                {creator.name.charAt(0).toUpperCase()}
              </div>
            )}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1">
                <span class="font-medium text-white truncate text-sm">{creator.name}</span>
                {creator.verified && (
                  <svg class="w-3 h-3 text-n8n-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                )}
              </div>
            </div>
            <div class="text-sm font-medium text-gray-400">{formatNumber(creator.totalViews)}</div>
          </a>
        ))}
      </div>
    </section>

    <!-- Top by Templates -->
    <section class="mb-12">
      <h2 class="text-2xl font-bold text-white mb-6">Most Prolific</h2>
      <p class="text-gray-400 mb-4">Creators with the most published templates.</p>
      <div class="ranking-grid" style={`--ranking-rows: ${Math.ceil(topByTemplates.length / 2)}`}>
        {topByTemplates.map((creator, index) => (
          <a
            href={getProfileUrl(creator.username)}
            target="_blank"
            rel="noopener noreferrer"
            class="card flex items-center gap-3 hover:border-n8n-primary/30 transition-colors"
          >
            <div class="text-lg font-bold text-gray-500 w-6">#{index + 1}</div>
            {creator.avatar ? (
              <img src={creator.avatar} alt={creator.name} class="w-10 h-10 rounded-full" />
            ) : (
              <div class="w-10 h-10 rounded-full bg-gray-700 flex items-center justify-center text-white font-bold text-sm">
                {creator.name.charAt(0).toUpperCase()}
              </div>
            )}
            <div class="flex-1 min-w-0">
              <div class="flex items-center gap-1">
                <span class="font-medium text-white truncate text-sm">{creator.name}</span>
                {creator.verified && (
                  <svg class="w-3 h-3 text-n8n-primary flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                )}
              </div>
            </div>
            <div class="text-sm font-medium text-gray-400">{creator.templateCount} templates</div>
          </a>
        ))}
      </div>
    </section>

    <!-- Links -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
      <a
        href={n8nUrls.creators()}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 bg-n8n-primary text-white rounded-lg font-medium hover:bg-n8n-primary/90 transition-colors"
      >
        View All Creators
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
      <a
        href={_attribution.url}
        target="_blank"
        rel="noopener noreferrer"
        class="inline-flex items-center gap-2 px-6 py-3 border border-gray-600 text-gray-300 rounded-lg font-medium hover:border-gray-500 transition-colors"
      >
        View on n8n Arena
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
        </svg>
      </a>
    </div>

    <!-- Attribution note -->
    <p class="text-center text-sm text-gray-500 mt-8">
      Creator metrics powered by <a href={_attribution.url} target="_blank" rel="noopener" class="text-gray-400 hover:text-gray-300">{_attribution.source}</a>.
      Updated daily.
    </p>
  </div>
</BaseLayout>
