      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <StatCard label="Total Members" value={aggregateStats.totalMembers} sparklineData={forumSparklineData} source={{ source: "Combined APIs", note: "Forum + Discord + Reddit" }} />
        <StatCard label="Forum Topics" value={aggregateStats.totalTopics} source={{ source: "Discourse API", url: "https://community.n8n.io", note: "updated daily" }} />
        <StatCard label="Total Posts" value={aggregateStats.totalPosts} source={{ source: "Combined APIs", note: "Forum + Bluesky" }} />
        <StatCard label="Platforms Tracked" value={aggregateStats.platforms} />
      </div>

      {/* Forum Member Milestones - within hero block */}
      {userPredictions.length > 0 && userPredictions.some(p => p.predictedDate) && (
        <div class="mt-8">
          <h3 class="text-xl font-bold text-white mb-2">Forum Member Milestones</h3>
          <p class="text-gray-400 mb-4">
            Predicted dates based on recent growth trends (last 6 months)
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {userPredictions.map((pred) => (
              <MilestonePrediction
                label="Forum Members"
