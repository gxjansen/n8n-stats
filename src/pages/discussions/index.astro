---
import BaseLayout from '@/layouts/BaseLayout.astro';
import StatCard from '@/components/cards/StatCard.astro';
import MilestonePrediction from '@/components/cards/MilestonePrediction.astro';
import CommunityHistoryChart from '@/components/charts/CommunityHistoryChart.astro';
import CommunityTreemapChart from '@/components/charts/CommunityTreemapChart.astro';
import BlueskyHistoryChart from '@/components/charts/BlueskyHistoryChart.astro';
import { fetchForumStats, fetchForumCategories } from '@/lib/api/discourse';
import { fetchDiscordStats } from '@/lib/api/discord';
import { formatNumber, n8nUrls } from '@/lib/utils/formatters';
import { predictMilestone, getNextMilestones } from '@/lib/utils/predictions';
import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

// Fetch forum and Discord data
const [forumStats, categories, discordStats] = await Promise.all([
  fetchForumStats(),
  fetchForumCategories(),
  fetchDiscordStats(),
]);

// Load Bluesky data
interface BlueskyHistory {
  lastUpdated: string;
  totals: {
    posts: number;
    uniqueAuthors: number;
    totalLikes: number;
    totalReposts: number;
  };
  monthly: Array<{ month: string; posts: number; totalLikes: number }>;
}

let blueskyStats: BlueskyHistory | null = null;
try {
  const blueskyPath = join(process.cwd(), 'public', 'data', 'history', 'bluesky.json');
  if (existsSync(blueskyPath)) {
    blueskyStats = JSON.parse(readFileSync(blueskyPath, 'utf-8'));
  }
} catch (e) {
  console.warn('Could not load Bluesky history');
}

// Calculate Bluesky stats for last 30 days
let blueskyLast30Days = { posts: 0, likes: 0 };
if (blueskyStats?.monthly) {
  const recentMonths = blueskyStats.monthly.slice(-1);
  blueskyLast30Days = {
    posts: recentMonths.reduce((sum, m) => sum + m.posts, 0),
    likes: recentMonths.reduce((sum, m) => sum + m.totalLikes, 0),
  };
}

// Load historical data for predictions
let userHistory: Array<{ date: string; value: number }> = [];
try {
  const historyPath = join(process.cwd(), 'public', 'data', 'community-history.json');
  const historyData = JSON.parse(readFileSync(historyPath, 'utf-8'));
  // Use monthly data for predictions
  userHistory = historyData.monthly?.map((d: any) => ({
    date: d.date,
    value: d.users,
  })) || [];
} catch (e) {
  console.warn('Could not load community history for predictions');
}

// Calculate milestone predictions for forum members
const currentUsers = forumStats.usersCount;
const userMilestones = getNextMilestones(currentUsers, 'users');
const userPredictions = userMilestones.map(milestone =>
  predictMilestone(userHistory, milestone, { lookbackMonths: 6 })
);

// Get top categories by topic count (more for treemap)
const topCategories = categories
  .filter(c => c.topicCount > 0)
  .sort((a, b) => b.topicCount - a.topicCount)
  .slice(0, 15);
---

