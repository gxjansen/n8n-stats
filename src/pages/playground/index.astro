<script define:vars={{ metricsData, sourcesData }}>
  window.__playgroundMetrics = metricsData;
  window.__playgroundSources = sourcesData;
</script>

<script>
  import Chart from 'chart.js/auto';
  import 'chartjs-adapter-date-fns';

  // Normalize date strings to ISO format (YYYY-MM-DD)
  // Handles: YYYY-MM ‚Üí YYYY-MM-01, YYYY-MM-DD ‚Üí YYYY-MM-DD
  function normalizeDate(dateStr: string): string {
    if (!dateStr) return dateStr;
    // If it's just YYYY-MM format, add day
    if (/^\d{4}-\d{2}$/.test(dateStr)) {
      return `${dateStr}-01`;
    }
    return dateStr;
  }

  interface MetricInfo {
    id: string;
    label: string;
    color: string;
    path: string;
    valueKey?: string;
    dateKey?: string;
    sourceId: string;
    sourceLabel: string;
    excludeZero?: boolean;
    file?: string;           // Override source file
    measuredSince?: string;  // Override source measuredSince
  }

  interface SourceInfo {
    id: string;
    label: string;
    shortLabel: string;
    file: string;
    historyStart: string;
    measuredSince: string;
  }

  interface SeriesConfig {
    metricId: string;
    dataMode: 'cumulative' | 'change';
    chartType: 'line' | 'area' | 'bar';
  }

  interface TimeSeriesPoint {
    date: string;
    value: number;
    isEstimated?: boolean;
  }

  interface LoadedData {
    metricId: string;
    label: string;
    color: string;
    data: TimeSeriesPoint[];
    dataMode: 'cumulative' | 'change';
    chartType: 'line' | 'area' | 'bar';
    measuredSince: string;
  }

  interface PlaygroundState {
    series: SeriesConfig[];
    range: '1m' | '3m' | '6m' | '1y' | '2y' | 'all';
  }

  // Get data from server
  const allMetrics: MetricInfo[] = (window as any).__playgroundMetrics;
  const allSources: SourceInfo[] = (window as any).__playgroundSources;

  // Group metrics by source for the dropdown
  const metricsBySource = allSources.map(source => ({
    source,
    metrics: allMetrics.filter(m => m.sourceId === source.id),
  }));

  // State
  let state: PlaygroundState = {
    series: [],
    range: '1y',
  };

  let chart: Chart | null = null;
  const dataCache: Map<string, any> = new Map();

  // DOM elements
  const seriesSlots = document.getElementById('series-slots')!;
  const addSeriesBtn = document.getElementById('add-series-btn')!;
  const rangeSelect = document.getElementById('range-select') as HTMLSelectElement;
  const resetBtn = document.getElementById('reset-btn')!;
  const shareBtn = document.getElementById('share-btn')!;
  const shareFeedback = document.getElementById('share-feedback')!;
  const chartCanvas = document.getElementById('playground-chart') as HTMLCanvasElement;
  const emptyState = document.getElementById('empty-state')!;
  const loadingState = document.getElementById('loading-state')!;
  const errorState = document.getElementById('error-state')!;
  const chartLegend = document.getElementById('chart-legend')!;
  const dualAxisNotice = document.getElementById('dual-axis-notice')!;
  const estimatedNotice = document.getElementById('estimated-notice')!;
  const correlationSection = document.getElementById('correlation-section')!;
  const correlationContent = document.getElementById('correlation-content')!;
  const correlationDatapoints = document.getElementById('correlation-datapoints')!;
  const correlationHelp = document.getElementById('correlation-help')!;
  const correlationModal = document.getElementById('correlation-modal')!;
  const closeCorrelationModal = document.getElementById('close-correlation-modal')!;

  // Parse URL state - new format: m=metricId:mode:type,metricId:mode:type
  function parseUrlState(): Partial<PlaygroundState> {
    const params = new URLSearchParams(window.location.search);
    const seriesParam = params.get('s');

    let series: SeriesConfig[] = [];
    if (seriesParam) {
      series = seriesParam.split(',').map(s => {
        const [metricId, mode, type] = s.split(':');
        return {
          metricId,
          dataMode: (mode === 'c' ? 'cumulative' : 'change') as 'cumulative' | 'change',
          chartType: (type === 'l' ? 'line' : type === 'a' ? 'area' : 'bar') as 'line' | 'area' | 'bar',
        };
      }).filter(s => s.metricId && allMetrics.some(m => m.id === s.metricId)).slice(0, 4);
    }

    return {
      series: series.length > 0 ? series : undefined,
      range: (params.get('r') as PlaygroundState['range']) || undefined,
    };
  }

  function updateUrl(): void {
    const params = new URLSearchParams();
    if (state.series.length > 0) {
      const seriesStr = state.series.map(s => {
        const mode = s.dataMode === 'cumulative' ? 'c' : 'p';
        const type = s.chartType === 'line' ? 'l' : s.chartType === 'area' ? 'a' : 'b';
        return `${s.metricId}:${mode}:${type}`;
      }).join(',');
      params.set('s', seriesStr);
    }
    if (state.range !== '1y') params.set('r', state.range);

    const queryString = params.toString();
    const url = queryString ? `?${queryString}` : window.location.pathname;
    window.history.replaceState({}, '', url);
  }

  // Create metric selector dropdown (allow all metrics, including duplicates)
  function createMetricSelect(selectedId?: string): HTMLSelectElement {
    const select = document.createElement('select');
    select.className = 'flex-1 min-w-[140px] bg-n8n-darker border border-n8n-border rounded px-2 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary';

    // Empty option
    const emptyOpt = document.createElement('option');
    emptyOpt.value = '';
    emptyOpt.textContent = 'Select metric...';
    select.appendChild(emptyOpt);

    // Group by source
    for (const group of metricsBySource) {
      const optgroup = document.createElement('optgroup');
      optgroup.label = group.source.label;

      for (const metric of group.metrics) {
        const option = document.createElement('option');
        option.value = metric.id;
        // Include source label in option text for clarity
        option.textContent = `${group.source.shortLabel}: ${metric.label}`;
        if (metric.id === selectedId) {
          option.selected = true;
        }
        optgroup.appendChild(option);
      }

      select.appendChild(optgroup);
    }

    return select;
  }

  // Create mode selector
  function createModeSelect(selectedMode: 'cumulative' | 'change'): HTMLSelectElement {
    const select = document.createElement('select');
    select.className = 'bg-n8n-darker border border-n8n-border rounded px-2 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary';
    select.innerHTML = `
      <option value="cumulative" ${selectedMode === 'cumulative' ? 'selected' : ''}>Cumulative</option>
      <option value="change" ${selectedMode === 'change' ? 'selected' : ''}>Change</option>
    `;
    return select;
  }

  // Create chart type selector
  function createChartTypeSelect(selectedType: 'line' | 'area' | 'bar'): HTMLSelectElement {
    const select = document.createElement('select');
    select.className = 'bg-n8n-darker border border-n8n-border rounded px-2 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary';
    select.innerHTML = `
      <option value="line" ${selectedType === 'line' ? 'selected' : ''}>Line</option>
      <option value="area" ${selectedType === 'area' ? 'selected' : ''}>Area</option>
      <option value="bar" ${selectedType === 'bar' ? 'selected' : ''}>Bar</option>
    `;
    return select;
  }

  // Render series slots
  function renderSeriesSlots(): void {
    seriesSlots.innerHTML = '';

    state.series.forEach((seriesConfig, index) => {
      const metric = allMetrics.find(m => m.id === seriesConfig.metricId);
      if (!metric) return;

      const slot = document.createElement('div');
      slot.className = 'flex flex-wrap items-center gap-2 p-2 bg-n8n-darker/50 rounded-lg';

      // Color indicator
      const colorDot = document.createElement('span');
      colorDot.className = 'w-3 h-3 rounded-full flex-shrink-0';
      colorDot.style.backgroundColor = metric.color;
      slot.appendChild(colorDot);

      // Metric dropdown
      const metricSelect = createMetricSelect(seriesConfig.metricId);
      metricSelect.addEventListener('change', () => {
        if (metricSelect.value) {
          state.series[index].metricId = metricSelect.value;
        } else {
          state.series.splice(index, 1);
        }
        updateUrl();
        renderSeriesSlots();
        updateChart();
      });
      slot.appendChild(metricSelect);

      // Mode dropdown
      const modeSelect = createModeSelect(seriesConfig.dataMode);
      modeSelect.addEventListener('change', () => {
        state.series[index].dataMode = modeSelect.value as 'cumulative' | 'change';
        updateUrl();
        updateChart();
      });
      slot.appendChild(modeSelect);

      // Chart type dropdown
      const chartTypeSelect = createChartTypeSelect(seriesConfig.chartType);
      chartTypeSelect.addEventListener('change', () => {
        state.series[index].chartType = chartTypeSelect.value as 'line' | 'area' | 'bar';
        updateUrl();
        updateChart();
      });
      slot.appendChild(chartTypeSelect);

      // Remove button
      const removeBtn = document.createElement('button');
      removeBtn.className = 'text-gray-500 hover:text-red-400 transition-colors p-1 ml-auto';
      removeBtn.innerHTML = '<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>';
      removeBtn.addEventListener('click', () => {
        state.series.splice(index, 1);
        updateUrl();
        renderSeriesSlots();
        updateChart();
      });
      slot.appendChild(removeBtn);

      seriesSlots.appendChild(slot);
    });

    // Update add button visibility
    addSeriesBtn.classList.toggle('hidden', state.series.length >= 4);
  }

  // Fetch data file
  async function fetchData(filePath: string): Promise<any> {
    if (dataCache.has(filePath)) {
      return dataCache.get(filePath);
    }
    const response = await fetch(filePath);
    if (!response.ok) throw new Error(`Failed to fetch ${filePath}`);
    const data = await response.json();
    dataCache.set(filePath, data);
    return data;
  }

  // Get file path for a metric (metric can override source's default file)
  function getFilePath(metric: MetricInfo): string {
    // Use metric-level file override if specified
    if (metric.file) return metric.file;

    // Otherwise use source's default file
    const source = allSources.find(s => s.id === metric.sourceId);
    return source?.file || '';
  }

  // Extract time series from data
  function extractTimeSeries(data: any, metric: MetricInfo): TimeSeriesPoint[] {
    // Filter function: exclude undefined, null, and optionally 0
    const isValidValue = (value: any): boolean => {
      if (value === undefined || value === null) return false;
      if (metric.excludeZero && value === 0) return false;
      return true;
    };

    // Handle templates special case
    if (metric.path.includes('.')) {
      const parts = metric.path.split('.');
      let current = data;
      for (const part of parts) {
        current = current?.[part];
      }
      if (Array.isArray(current)) {
        return current
          .map(item => ({
            date: normalizeDate(item[metric.dateKey || 'date']),
            value: item[metric.valueKey || 'value'],
          }))
          .filter((p: TimeSeriesPoint) => isValidValue(p.value));
      }
      return [];
    }

    // Standard: use monthly data
    const granularityData = data.monthly || data.weekly || data.daily;
    if (!Array.isArray(granularityData)) return [];

    return granularityData.map((item: any) => ({
      date: normalizeDate(item.date),
      value: item[metric.path],
    })).filter((p: TimeSeriesPoint) => isValidValue(p.value));
  }

  // Load all selected series
  async function loadSeries(): Promise<LoadedData[]> {
    const results: LoadedData[] = [];

    for (const seriesConfig of state.series) {
      const metric = allMetrics.find(m => m.id === seriesConfig.metricId);
      if (!metric) continue;

      const source = allSources.find(s => s.id === metric.sourceId);
      if (!source) continue;

      const filePath = getFilePath(metric);
      if (!filePath) continue;

      try {
        const data = await fetchData(filePath);
        let timeSeries = extractTimeSeries(data, metric);

        // Use metric-level measuredSince if specified, otherwise source's
        const measuredSince = metric.measuredSince || source.measuredSince;

        // Mark data points as estimated (before measuredSince date)
        timeSeries = timeSeries.map(point => ({
          ...point,
          isEstimated: point.date < measuredSince,
        }));

        // Create label based on mode, including source for clarity
        const modeLabel = seriesConfig.dataMode === 'change' ? ' (Change)' : '';

        results.push({
          metricId: metric.id,
          label: `${source.shortLabel}: ${metric.label}${modeLabel}`,
          color: metric.color,
          data: timeSeries,
          dataMode: seriesConfig.dataMode,
          chartType: seriesConfig.chartType,
          measuredSince,
        });
      } catch (error) {
        console.error(`Failed to load ${seriesConfig.metricId}:`, error);
      }
    }

    return results;
  }

  // Filter by date range
  function filterByRange(data: TimeSeriesPoint[]): TimeSeriesPoint[] {
    if (state.range === 'all') return data;

    const now = new Date();
    let monthsBack: number;
    switch (state.range) {
      case '1m': monthsBack = 1; break;
      case '3m': monthsBack = 3; break;
      case '6m': monthsBack = 6; break;
      case '1y': monthsBack = 12; break;
      case '2y': monthsBack = 24; break;
      default: return data;
    }

    const startDate = new Date(now);
    startDate.setMonth(startDate.getMonth() - monthsBack);
    const startStr = `${startDate.getFullYear()}-${String(startDate.getMonth() + 1).padStart(2, '0')}`;

    return data.filter(p => p.date >= startStr);
  }

  // Convert to period change
  function toPeriodChange(data: TimeSeriesPoint[]): TimeSeriesPoint[] {
    if (data.length < 2) return data;
    return data.slice(1).map((point, index) => ({
      date: point.date,
      value: point.value - data[index].value,
      isEstimated: point.isEstimated || data[index].isEstimated, // Either point estimated = result estimated
    }));
  }

  // Calculate Pearson correlation coefficient between two aligned series
  function calculateCorrelation(values1: (number | null)[], values2: (number | null)[]): { r: number; n: number } {
    // Filter to only overlapping non-null values
    const pairs: [number, number][] = [];
    for (let i = 0; i < values1.length; i++) {
      if (values1[i] !== null && values2[i] !== null) {
        pairs.push([values1[i]!, values2[i]!]);
      }
    }

    const n = pairs.length;
    if (n < 3) return { r: NaN, n }; // Need at least 3 points for meaningful correlation

    const mean1 = pairs.reduce((sum, p) => sum + p[0], 0) / n;
    const mean2 = pairs.reduce((sum, p) => sum + p[1], 0) / n;

    let num = 0, den1 = 0, den2 = 0;
    for (const [v1, v2] of pairs) {
      const d1 = v1 - mean1;
      const d2 = v2 - mean2;
      num += d1 * d2;
      den1 += d1 * d1;
      den2 += d2 * d2;
    }

    const denominator = Math.sqrt(den1 * den2);
    const r = denominator === 0 ? 0 : num / denominator;
    return { r, n };
  }

  // Interpret correlation strength
  function interpretCorrelation(r: number): { label: string; colorClass: string } {
    const abs = Math.abs(r);
    const direction = r >= 0 ? 'positive' : 'negative';

    if (isNaN(r)) return { label: 'Insufficient data', colorClass: 'text-gray-500' };
    if (abs >= 0.9) return { label: `Very strong ${direction}`, colorClass: r >= 0 ? 'text-green-400' : 'text-red-400' };
    if (abs >= 0.7) return { label: `Strong ${direction}`, colorClass: r >= 0 ? 'text-green-500' : 'text-red-500' };
    if (abs >= 0.5) return { label: `Moderate ${direction}`, colorClass: r >= 0 ? 'text-yellow-400' : 'text-orange-400' };
    if (abs >= 0.3) return { label: `Weak ${direction}`, colorClass: 'text-gray-400' };
    return { label: 'Very weak / none', colorClass: 'text-gray-500' };
  }

  // Calculate and display correlations between all series pairs
  interface CorrelationResult {
    label1: string;
    label2: string;
    color1: string;
    color2: string;
    r: number;
    n: number;
  }

  function calculateAllCorrelations(datasets: LoadedData[]): CorrelationResult[] {
    const results: CorrelationResult[] = [];

    // Align data by MONTH (YYYY-MM) to handle different granularities
    // For each month, take the last value in that month
    const getMonthKey = (date: string) => date.slice(0, 7); // YYYY-MM

    // Get all unique months from all datasets
    const allMonths = new Set<string>();
    datasets.forEach(d => d.data.forEach(p => allMonths.add(getMonthKey(p.date))));
    const sortedMonths = Array.from(allMonths).sort();

    // Get aligned data for each dataset (by month, using last value in month)
    const alignedData = datasets.map(d => {
      // Group by month, keep last value per month
      const monthMap = new Map<string, number>();
      for (const p of d.data) {
        const month = getMonthKey(p.date);
        monthMap.set(month, p.value); // Later dates overwrite earlier ones
      }
      return sortedMonths.map(month => monthMap.get(month) ?? null);
    });

    // Calculate pairwise correlations
    for (let i = 0; i < datasets.length; i++) {
      for (let j = i + 1; j < datasets.length; j++) {
        const { r, n } = calculateCorrelation(alignedData[i], alignedData[j]);
        results.push({
          label1: datasets[i].label,
          label2: datasets[j].label,
          color1: datasets[i].color,
          color2: datasets[j].color,
          r,
          n,
        });
      }
    }

    // Sort by absolute correlation strength (strongest first)
    results.sort((a, b) => Math.abs(b.r) - Math.abs(a.r));
    return results;
  }

  function renderCorrelations(correlations: CorrelationResult[]): void {
    if (correlations.length === 0) {
      correlationSection.classList.add('hidden');
      return;
    }

    correlationSection.classList.remove('hidden');
    correlationContent.innerHTML = '';

    // Track min data points for the note
    const minN = Math.min(...correlations.map(c => c.n));
    correlationDatapoints.textContent = minN.toString();

    for (const corr of correlations) {
      const { label, colorClass } = interpretCorrelation(corr.r);
      const rDisplay = isNaN(corr.r) ? '‚Äî' : (corr.r >= 0 ? '+' : '') + corr.r.toFixed(2);

      const row = document.createElement('div');
      row.className = 'flex flex-wrap items-center gap-x-2 gap-y-1 text-sm';
      row.innerHTML = `
        <span class="flex items-center gap-1">
          <span class="w-2 h-2 rounded-full" style="background-color: ${corr.color1}"></span>
          <span class="text-gray-400 truncate max-w-[100px]" title="${corr.label1}">${corr.label1.split(':')[1]?.trim() || corr.label1}</span>
        </span>
        <span class="text-gray-600">‚Üî</span>
        <span class="flex items-center gap-1">
          <span class="w-2 h-2 rounded-full" style="background-color: ${corr.color2}"></span>
          <span class="text-gray-400 truncate max-w-[100px]" title="${corr.label2}">${corr.label2.split(':')[1]?.trim() || corr.label2}</span>
        </span>
        <span class="text-gray-600">=</span>
        <span class="font-mono ${colorClass}">${rDisplay}</span>
        <span class="text-xs ${colorClass}">(${label})</span>
      `;
      correlationContent.appendChild(row);
    }
  }

  // Check if dual axis needed
  function needsDualAxis(datasets: LoadedData[]): boolean {
    if (datasets.length < 2) return false;
    const maxValues = datasets.map(d => Math.max(...d.data.map(p => Math.abs(p.value))));
    const minMax = Math.min(...maxValues);
    const maxMax = Math.max(...maxValues);
    return minMax > 0 && maxMax / minMax > 10;
  }

  // Update chart
  async function updateChart(): Promise<void> {
    if (state.series.length === 0) {
      emptyState.classList.remove('hidden');
      loadingState.classList.add('hidden');
      errorState.classList.add('hidden');
      chartLegend.classList.add('hidden');
      dualAxisNotice.classList.add('hidden');
      estimatedNotice.classList.add('hidden');
      correlationSection.classList.add('hidden');
      if (chart) {
        chart.destroy();
        chart = null;
      }
      return;
    }

    emptyState.classList.add('hidden');
    loadingState.classList.remove('hidden');
    errorState.classList.add('hidden');

    try {
      let datasets = await loadSeries();

      if (datasets.length === 0) {
        throw new Error('No data loaded');
      }

      // Apply date range filter and data mode transformation
      datasets = datasets.map(d => {
        let filteredData = filterByRange(d.data);
        if (d.dataMode === 'change') {
          filteredData = toPeriodChange(filteredData);
        }
        return { ...d, data: filteredData };
      });

      // Check for dual axis
      const useDualAxis = needsDualAxis(datasets);
      dualAxisNotice.classList.toggle('hidden', !useDualAxis);

      // Build chart datasets with time-based data points {x, y}
      let hasEstimatedData = false;

      const chartDatasets = datasets.map((d, index) => {
        // Convert to {x: Date, y: value} format for time scale
        const dataPoints = d.data.map(p => ({
          x: new Date(p.date).getTime(),
          y: p.value,
          isEstimated: p.isEstimated,
        }));

        // Track if any estimated data is visible
        if (d.data.some(p => p.isEstimated)) {
          hasEstimatedData = true;
        }

        const isArea = d.chartType === 'area';
        const isBar = d.chartType === 'bar';

        // Segment styling for dashed lines on estimated data (lines only, not bars)
        const segmentStyle = !isBar ? {
          segment: {
            borderDash: (ctx: any) => {
              // Check if either endpoint of segment is estimated
              const p0 = dataPoints[ctx.p0DataIndex];
              const p1 = dataPoints[ctx.p1DataIndex];
              return (p0?.isEstimated || p1?.isEstimated) ? [6, 3] : undefined;
            },
            borderColor: (ctx: any) => {
              // Slightly transparent for estimated segments
              const p0 = dataPoints[ctx.p0DataIndex];
              const p1 = dataPoints[ctx.p1DataIndex];
              return (p0?.isEstimated || p1?.isEstimated) ? `${d.color}aa` : undefined;
            },
          },
        } : {};

        return {
          label: d.label,
          data: dataPoints,
          borderColor: d.color,
          backgroundColor: isArea ? `${d.color}20` : `${d.color}99`,
          fill: isArea,
          tension: 0.1,
          pointRadius: isBar ? 0 : dataPoints.length > 60 ? 0 : 3,
          pointHoverRadius: isBar ? 0 : 5,
          yAxisID: useDualAxis && index >= 1 ? 'y1' : 'y',
          type: isBar ? 'bar' : 'line',
          order: isBar ? 2 : 1, // Bars render behind lines
          ...segmentStyle,
        };
      });

      // Show/hide estimated data notice
      estimatedNotice.classList.toggle('hidden', !hasEstimatedData);

      loadingState.classList.add('hidden');

      // Create or update chart
      if (chart) {
        chart.data.datasets = chartDatasets as any;
        if (chart.options.scales) {
          (chart.options.scales as any).y1.display = useDualAxis;
          if (useDualAxis && datasets[1]) {
            (chart.options.scales as any).y1.ticks.color = datasets[1].color;
          }
        }
        chart.update();
      } else {
        chart = new Chart(chartCanvas, {
          type: 'line',
          data: {
            datasets: chartDatasets as any,
          },
          options: {
            responsive: true,
            maintainAspectRatio: false,
            interaction: {
              mode: 'nearest',
              intersect: false,
            },
            plugins: {
              legend: {
                display: false,
              },
              tooltip: {
                backgroundColor: '#1e1e1e',
                titleColor: '#fff',
                bodyColor: '#9ca3af',
                borderColor: '#333',
                borderWidth: 1,
                callbacks: {
                  title: (items) => {
                    if (items.length === 0) return '';
                    const date = new Date(items[0].parsed.x);
                    return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' });
                  },
                  label: (context) => {
                    const value = context.parsed.y;
                    if (value === null) return '';
                    return `${context.dataset.label}: ${value.toLocaleString()}`;
                  },
                },
              },
            },
            scales: {
              x: {
                type: 'time',
                time: {
                  unit: 'month',
                  displayFormats: {
                    month: 'MMM yyyy',
                  },
                },
                grid: { color: 'rgba(255,255,255,0.05)' },
                ticks: { color: '#6b7280', maxRotation: 45 },
              },
              y: {
                type: 'linear',
                display: true,
                position: 'left',
                grid: { color: 'rgba(255,255,255,0.05)' },
                ticks: {
                  color: '#6b7280',
                  callback: (value) => {
                    if (typeof value === 'number') {
                      if (Math.abs(value) >= 1000000) return (value / 1000000).toFixed(1) + 'M';
                      if (Math.abs(value) >= 1000) return (value / 1000).toFixed(1) + 'K';
                    }
                    return value;
                  },
                },
              },
              y1: {
                type: 'linear',
                display: useDualAxis,
                position: 'right',
                grid: { drawOnChartArea: false },
                ticks: {
                  color: datasets[1]?.color || '#6b7280',
                  callback: (value) => {
                    if (typeof value === 'number') {
                      if (Math.abs(value) >= 1000000) return (value / 1000000).toFixed(1) + 'M';
                      if (Math.abs(value) >= 1000) return (value / 1000).toFixed(1) + 'K';
                    }
                    return value;
                  },
                },
              },
            },
          },
        });
      }

      // Update legend
      chartLegend.innerHTML = '';
      chartLegend.classList.remove('hidden');
      datasets.forEach((d, index) => {
        const item = document.createElement('div');
        item.className = 'flex items-center gap-2';
        const typeIcon = d.chartType === 'bar' ? '‚ñÆ' : d.chartType === 'area' ? '‚ñ¨' : '‚îÄ';
        item.innerHTML = `
          <span class="w-3 h-3 rounded-full" style="background-color: ${d.color}"></span>
          <span class="text-gray-400 text-sm">${d.label}</span>
          <span class="text-xs text-gray-600">${typeIcon}</span>
          ${useDualAxis ? `<span class="text-xs text-gray-500">(${index === 0 ? 'L' : 'R'})</span>` : ''}
        `;
        chartLegend.appendChild(item);
      });

      // Calculate and display correlations (only if 2+ series)
      if (datasets.length >= 2) {
        const correlations = calculateAllCorrelations(datasets);
        renderCorrelations(correlations);
      } else {
        correlationSection.classList.add('hidden');
      }

    } catch (error) {
      console.error('Chart update failed:', error);
      loadingState.classList.add('hidden');
      errorState.classList.remove('hidden');
    }
  }

  // Event handlers
  addSeriesBtn.addEventListener('click', () => {
    if (state.series.length >= 4) return;
    // Add new series with first available metric
    const firstMetric = allMetrics[0];
    if (firstMetric) {
      state.series.push({
        metricId: firstMetric.id,
        dataMode: 'cumulative',
        chartType: 'line',
      });
      updateUrl();
      renderSeriesSlots();
      updateChart();
    }
  });

  rangeSelect.addEventListener('change', () => {
    state.range = rangeSelect.value as PlaygroundState['range'];
    updateUrl();
    updateChart();
  });

  resetBtn.addEventListener('click', () => {
    state = {
      series: [],
      range: '1y',
    };
    rangeSelect.value = state.range;
    updateUrl();
    renderSeriesSlots();
    updateChart();
  });

  shareBtn.addEventListener('click', async () => {
    try {
      await navigator.clipboard.writeText(window.location.href);
      shareFeedback.classList.remove('opacity-0');
      setTimeout(() => shareFeedback.classList.add('opacity-0'), 2000);
    } catch {
      // Fallback: select URL bar
      window.prompt('Copy this URL:', window.location.href);
    }
  });

  // Correlation help modal
  correlationHelp.addEventListener('click', () => {
    correlationModal.classList.remove('hidden');
  });

  closeCorrelationModal.addEventListener('click', () => {
    correlationModal.classList.add('hidden');
  });

  correlationModal.addEventListener('click', (e) => {
    if (e.target === correlationModal) {
      correlationModal.classList.add('hidden');
    }
  });

  // Initialize
  function init(): void {
    const urlState = parseUrlState();

    // Apply URL state
    if (urlState.series) state.series = urlState.series;
    if (urlState.range) {
      state.range = urlState.range;
      rangeSelect.value = state.range;
    }

    renderSeriesSlots();
    updateChart();
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', init);
  } else {
    init();
  }
</script>

