            x: {
              grid: { color: 'rgba(255,255,255,0.05)' },
              ticks: { color: '#6b7280' },
            },
            y: {
              grid: { display: false },
              ticks: { color: '#9ca3af', font: { size: 11 } },
            },
          },
        },
      });
    }
  }

  function renderRankingTable(): void {
    const items = getFilteredRankingItems();
    const fields = rankingData?.fields || [];

    // Header
    rankTableHead.innerHTML = `
      <tr>
        <th class="w-8">#</th>
        <th>Name</th>
        ${fields.map((f: any) => `<th class="text-right">${f.label}</th>`).join('')}
      </tr>
    `;

    // Body
    rankTableBody.innerHTML = items.map((item: any, index: number) => `
      <tr>
        <td class="text-gray-500">${index + 1}</td>
        <td class="font-medium">${item.label}</td>
        ${fields.map((f: any) => {
          const val = item.values[f.id];
          const formatted = f.type === 'percentage' ? `${val.toFixed(1)}%` : val.toLocaleString();
          return `<td class="text-right text-gray-400">${formatted}</td>`;
        }).join('')}
      </tr>
    `).join('');
  }

  // ============================================================================
  // CORRELATION MODE
  // ============================================================================
  let corrInitialized = false;
  let correlationData: any = null;

  async function initCorrelationMode(): Promise<void> {
    if (corrInitialized) return;
    corrInitialized = true;
    await loadCorrelationSource();
  }

  async function loadCorrelationSource(): Promise<void> {
    const sourceId = corrSourceSelect.value;
    const source = correlationSources.find((s: any) => s.id === sourceId);
    if (!source) return;

    corrLoading.classList.remove('hidden');

    try {
      const rawData = await fetchCategoricalData(source.file);
      const fields = source.correlationFields || [];

      // Populate axis selects
      corrXSelect.innerHTML = '';
      corrYSelect.innerHTML = '';
      for (const field of fields) {
        const xOpt = document.createElement('option');
        xOpt.value = field.id;
        xOpt.textContent = field.label;
        corrXSelect.appendChild(xOpt);

        const yOpt = document.createElement('option');
        yOpt.value = field.id;
        yOpt.textContent = field.label;
        corrYSelect.appendChild(yOpt);
      }

      // Set defaults
      if (fields.length >= 2) {
        corrXSelect.value = fields[0].id;
        corrYSelect.value = fields[1].id;
      }

      // Get data array
      const dataArray = source.dataPath ? getNestedValue(rawData, source.dataPath) : rawData;

      // Store for later
      correlationData = {
        source,
        fields,
        dataArray,
        lastUpdated: source.lastUpdatedPath ? getNestedValue(rawData, source.lastUpdatedPath) : null,
      };

      corrUpdated.textContent = correlationData.lastUpdated ? `Last updated: ${new Date(correlationData.lastUpdated).toLocaleDateString()}` : '';

      renderCorrelationChart();

    } catch (error) {
      console.error('Failed to load correlation data:', error);
    } finally {
      corrLoading.classList.add('hidden');
    }
  }

  function renderCorrelationChart(): void {
    if (!correlationData) return;

    const xFieldId = corrXSelect.value;
    const yFieldId = corrYSelect.value;
    const xField = correlationData.fields.find((f: any) => f.id === xFieldId);
    const yField = correlationData.fields.find((f: any) => f.id === yFieldId);
    const showTrend = corrTrendCheck.checked;

    if (!xField || !yField) return;

    // Build scatter points
    const points: { x: number; y: number; label: string }[] = [];
    for (const item of correlationData.dataArray) {
      const x = Number(getNestedValue(item, xField.path));
      const y = Number(getNestedValue(item, yField.path));
      const label = item[correlationData.source.labelField || 'name'] || 'Unknown';
      if (!isNaN(x) && !isNaN(y) && x > 0 && y > 0) {
        points.push({ x, y, label });
      }
    }

    // Calculate correlation
    const xValues = points.map(p => p.x);
    const yValues = points.map(p => p.y);
    const r = pearsonCorrelation(xValues, yValues);

    // Update stats
    corrCoefficient.textContent = isNaN(r) ? '-' : (r >= 0 ? '+' : '') + r.toFixed(3);
    corrCoefficient.className = getCorrelationColorClass(r);
    corrInterpretation.textContent = interpretCorrelationValue(r);
    corrPoints.textContent = points.length.toLocaleString();

    // Chart datasets
    const datasets: any[] = [{
      label: 'Data Points',
      data: points,
      backgroundColor: 'rgba(255, 109, 90, 0.6)',
      borderColor: '#ff6d5a',
      borderWidth: 1,
      pointRadius: 5,
      pointHoverRadius: 7,
    }];

    // Add trend line if enabled
    if (showTrend && points.length >= 2) {
      const regression = linearRegression(points);
      if (regression) {
        const minX = Math.min(...xValues);
        const maxX = Math.max(...xValues);
        const trendPoints = regression.trendLine(minX, maxX);
        datasets.push({
          label: `Trend (R¬≤ = ${regression.rSquared.toFixed(2)})`,
          data: trendPoints,
          type: 'line',
          borderColor: '#4bc0c0',
          borderWidth: 2,
          borderDash: [5, 5],
          pointRadius: 0,
          fill: false,
        });
      }
    }

    const chartData = { datasets };

    if (corrChart) {
      corrChart.data = chartData;
      corrChart.options.scales!.x!.title = { display: true, text: xField.label, color: '#9ca3af' };
      corrChart.options.scales!.y!.title = { display: true, text: yField.label, color: '#9ca3af' };
      corrChart.update();
    } else {
      corrChart = new Chart(corrCanvas, {
        type: 'scatter',
        data: chartData,
        options: {
          responsive: true,
          maintainAspectRatio: false,
          plugins: {
            legend: { display: showTrend, position: 'bottom', labels: { color: '#9ca3af' } },
            tooltip: {
              backgroundColor: '#1e1e1e',
              titleColor: '#fff',
              bodyColor: '#9ca3af',
              borderColor: '#333',
              borderWidth: 1,
              callbacks: {
                title: (items) => {
                  const point = points[items[0]?.dataIndex];
                  return point?.label || '';
                },
                label: (ctx) => {
                  const point = points[ctx.dataIndex];
                  if (!point) return '';
                  return `${xField.label}: ${point.x.toLocaleString()}, ${yField.label}: ${point.y.toLocaleString()}`;
                },
              },
            },
          },
          scales: {
            x: {
              type: 'linear',
              grid: { color: 'rgba(255,255,255,0.05)' },
              ticks: { color: '#6b7280' },
              title: { display: true, text: xField.label, color: '#9ca3af' },
            },
            y: {
              type: 'linear',
              grid: { color: 'rgba(255,255,255,0.05)' },
              ticks: { color: '#6b7280' },
              title: { display: true, text: yField.label, color: '#9ca3af' },
            },
          },
        },
      });
    }
  }

  function getCorrelationColorClass(r: number): string {
    if (isNaN(r)) return 'text-gray-500';
    const abs = Math.abs(r);
    if (abs >= 0.7) return r >= 0 ? 'text-green-400 text-2xl font-bold' : 'text-red-400 text-2xl font-bold';
    if (abs >= 0.5) return r >= 0 ? 'text-yellow-400 text-2xl font-bold' : 'text-orange-400 text-2xl font-bold';
    return 'text-gray-400 text-2xl font-bold';
  }

  function interpretCorrelationValue(r: number): string {
    if (isNaN(r)) return 'Insufficient data';
    const abs = Math.abs(r);
    const dir = r >= 0 ? 'positive' : 'negative';
    if (abs >= 0.9) return `Very strong ${dir}`;
    if (abs >= 0.7) return `Strong ${dir}`;
    if (abs >= 0.5) return `Moderate ${dir}`;
    if (abs >= 0.3) return `Weak ${dir}`;
    return 'Very weak / none';
  }

  // ============================================================================
  // EVENT HANDLERS
  // ============================================================================

  // Tab clicks
  modeTabs.forEach(tab => {
    tab.addEventListener('click', () => {
      const mode = tab.dataset.mode as PlaygroundMode;
      if (mode) switchMode(mode);
    });
  });

  // Distribution controls
  if (distSourceSelect) {
    distSourceSelect.addEventListener('change', () => {
      distInitialized = false;
      loadDistributionData();
    });
  }
  if (distScaleSelect) {
    distScaleSelect.addEventListener('change', () => {
      // Chart.js requires destroying and recreating to change scale type
      if (distChart && currentDistBins.length > 0) {
        distChart.destroy();
        distChart = null;
        renderDistributionChart(currentDistBins, currentDistTitle);
      }
    });
  }

  // Ranking controls
  if (rankSourceSelect) {
    rankSourceSelect.addEventListener('change', () => {
      rankInitialized = false;
      loadRankingData();
    });
  }
  if (rankSortSelect) {
    rankSortSelect.addEventListener('change', () => {
      renderRankingChart();
      renderRankingTable();
    });
  }
  if (rankFilterSelect) {
    rankFilterSelect.addEventListener('change', () => {
      renderRankingChart();
      renderRankingTable();
    });
  }
  if (rankLimitSelect) {
    rankLimitSelect.addEventListener('change', () => {
      renderRankingChart();
      renderRankingTable();
    });
  }

  // Correlation controls
  if (corrSourceSelect) {
    corrSourceSelect.addEventListener('change', () => {
      corrInitialized = false;
      loadCorrelationSource();
    });
  }
  if (corrXSelect) {
    corrXSelect.addEventListener('change', renderCorrelationChart);
  }
  if (corrYSelect) {
    corrYSelect.addEventListener('change', renderCorrelationChart);
  }
  if (corrTrendCheck) {
    corrTrendCheck.addEventListener('change', renderCorrelationChart);
  }

  // ============================================================================
  // INITIALIZATION
  // ============================================================================
  function initModes(): void {
    const mode = parseMode();
    switchMode(mode);
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initModes);
  } else {
    initModes();
  }
</script>
