---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DATA_SOURCES, getAllMetrics, CATEGORICAL_SOURCES, getCategoricalSourcesByType } from '@/lib/playground/registry';
import { MODE_LABELS } from '@/lib/playground/state';

// Prepare metrics data for client-side
const metricsData = getAllMetrics();
const sourcesData = DATA_SOURCES.map(s => ({
  id: s.id,
  label: s.label,
  shortLabel: s.shortLabel,
  file: s.file,
  historyStart: s.historyStart,
  measuredSince: s.measuredSince,
}));

// Prepare categorical sources for client-side
const distributionSources = getCategoricalSourcesByType('distribution');
const rankingSources = getCategoricalSourcesByType('ranking');
const correlationSources = getCategoricalSourcesByType('correlation');
---

<BaseLayout title="Data Playground" description="Explore and compare n8n ecosystem metrics">
  <div class="container-narrow py-12">
    <!-- Header -->
    <div class="mb-8">
      <h1 class="text-3xl font-bold text-white mb-2">Data Playground</h1>
      <p class="text-gray-400">
        Explore n8n ecosystem data: track metrics over time, analyze distributions, compare rankings, or find correlations.
      </p>
    </div>

    <!-- Mobile Notice Banner -->
    <div id="mobile-notice" class="md:hidden bg-n8n-card border border-n8n-border rounded-lg p-4 mb-6">
      <div class="flex items-start justify-between gap-3">
        <div class="flex items-start gap-3">
          <svg class="w-5 h-5 text-n8n-primary flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
          </svg>
          <p class="text-sm text-gray-300">
            For the best experience with interactive charts and controls, use a desktop browser.
          </p>
        </div>
        <button
          id="dismiss-mobile-notice"
          class="text-gray-400 hover:text-white transition-colors flex-shrink-0"
          aria-label="Dismiss notice"
        >
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </button>
      </div>
    </div>

    <script is:inline>
      (function() {
        const notice = document.getElementById('mobile-notice');
        const dismissBtn = document.getElementById('dismiss-mobile-notice');

        // Check if user has dismissed the notice before
        if (localStorage.getItem('playground-mobile-notice-dismissed') === 'true') {
          if (notice) notice.style.display = 'none';
        }

        if (dismissBtn && notice) {
          dismissBtn.addEventListener('click', function() {
            notice.style.display = 'none';
            localStorage.setItem('playground-mobile-notice-dismissed', 'true');

            // Track dismissal in Umami
            if (typeof umami !== 'undefined') {
              umami.track('playground-mobile-notice', { action: 'dismiss' });
            }
          });
        }
      })();
    </script>

    <!-- Mode Tabs -->
    <div class="flex flex-wrap gap-2 mb-6" role="tablist">
      <button
        id="tab-timeseries"
        class="mode-tab px-4 py-2 text-sm font-medium rounded-lg transition-colors"
        role="tab"
        aria-selected="true"
        data-mode="timeseries"
      >
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
          </svg>
          Time Series
        </span>
      </button>
      <button
        id="tab-distribution"
        class="mode-tab px-4 py-2 text-sm font-medium rounded-lg transition-colors"
        role="tab"
        aria-selected="false"
        data-mode="distribution"
      >
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          Distributions
        </span>
      </button>
      <button
        id="tab-ranking"
        class="mode-tab px-4 py-2 text-sm font-medium rounded-lg transition-colors"
        role="tab"
        aria-selected="false"
        data-mode="ranking"
      >
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4h13M3 8h9m-9 4h6m4 0l4-4m0 0l4 4m-4-4v12" />
          </svg>
          Rankings
        </span>
      </button>
      <button
        id="tab-correlation"
        class="mode-tab px-4 py-2 text-sm font-medium rounded-lg transition-colors"
        role="tab"
        aria-selected="false"
        data-mode="correlation"
      >
        <span class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z" />
            <circle cx="8" cy="16" r="2" />
            <circle cx="16" cy="8" r="2" />
          </svg>
          Correlations
        </span>
      </button>
    </div>

    <!-- ============================================== -->
    <!-- TIME SERIES MODE -->
    <!-- ============================================== -->
    <div id="mode-timeseries" class="mode-content">

    <!-- Controls Card -->
    <div class="card mb-6">
      <!-- Global Date Range -->
      <div class="flex flex-wrap items-center gap-4 mb-4 pb-4 border-b border-n8n-border">
        <div class="flex items-center gap-3">
          <label class="text-sm font-medium text-gray-300">Date Range:</label>
          <select
            id="range-select"
            class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
          >
            <option value="1m">Last month</option>
            <option value="3m">Last 3 months</option>
            <option value="6m">Last 6 months</option>
            <option value="1y" selected>Last year</option>
            <option value="2y">Last 2 years</option>
            <option value="all">All time</option>
          </select>
        </div>
        <span class="text-xs text-gray-500">Applies to all series</span>
      </div>

      <!-- Series List -->
      <div class="space-y-3">
        <label class="block text-sm font-medium text-gray-300">Data Series</label>
        <div id="series-slots" class="space-y-2">
          <!-- Series rows populated by JS -->
        </div>
        <button
          id="add-series-btn"
          class="flex items-center gap-2 text-sm text-n8n-primary hover:text-n8n-primary/80 transition-colors mt-2"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
          </svg>
          Add series
        </button>
      </div>

      <!-- Action buttons -->
      <div class="flex items-center gap-3 mt-4 pt-4 border-t border-n8n-border">
        <button
          id="reset-btn"
          class="text-sm text-gray-400 hover:text-white transition-colors"
        >
          Reset
        </button>
        <button
          id="share-btn"
          class="flex items-center gap-1.5 text-sm text-gray-400 hover:text-white transition-colors"
        >
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
          </svg>
          Share
        </button>
        <span id="share-feedback" class="text-sm text-green-400 opacity-0 transition-opacity">Copied!</span>
      </div>
    </div>

    <!-- Chart Area -->
    <div class="card">
      <div id="chart-container" class="relative h-[300px] md:h-[400px]">
        <canvas id="playground-chart"></canvas>

        <!-- Empty State -->
        <div id="empty-state" class="absolute inset-0 flex flex-col items-center justify-center">
          <div class="text-center max-w-md">
            <div class="text-6xl mb-4 opacity-50">üìä</div>
            <h3 class="text-xl font-semibold text-white mb-2">Start Exploring</h3>
            <p class="text-gray-400 mb-4">
              Select one or more data series above to visualize trends across the n8n ecosystem.
            </p>
            <p class="text-sm text-gray-500">
              Try comparing GitHub Stars with Forum Members to see how community growth correlates.
            </p>
          </div>
        </div>

        <!-- Loading State -->
        <div id="loading-state" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
          <div class="flex items-center gap-3 text-gray-400">
            <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Loading data...
          </div>
        </div>

        <!-- Error State -->
        <div id="error-state" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
          <div class="text-center">
            <div class="text-4xl mb-2">‚ö†Ô∏è</div>
            <p class="text-red-400">Failed to load data. Please try again.</p>
          </div>
        </div>
      </div>

      <!-- Legend -->
      <div id="chart-legend" class="hidden flex flex-wrap items-center justify-center gap-4 mt-4 pt-4 border-t border-n8n-border">
        <!-- Populated by JS -->
      </div>

      <!-- Dual axis indicator -->
      <div id="dual-axis-notice" class="hidden text-center text-sm text-gray-500 mt-2">
        Using dual Y-axis due to different scales
      </div>

      <!-- Estimated data notice -->
      <div id="estimated-notice" class="hidden flex items-center justify-center gap-2 text-sm text-amber-500/80 mt-2">
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <span>Dashed lines indicate interpolated data</span>
      </div>

      <!-- Correlation Analysis -->
      <div id="correlation-section" class="hidden mt-4 pt-4 border-t border-n8n-border">
        <div class="flex items-center gap-2 mb-3">
          <h3 class="text-sm font-medium text-gray-300">Correlation Analysis</h3>
          <button
            id="correlation-help"
            class="text-gray-500 hover:text-gray-300 transition-colors"
            title="About correlation"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </button>
        </div>
        <div id="correlation-content" class="space-y-2">
          <!-- Populated by JS -->
        </div>
        <p id="correlation-note" class="text-xs text-gray-500 mt-2">
          Based on <span id="correlation-datapoints">0</span> overlapping data points in selected range
        </p>
      </div>

      <!-- Correlation Help Modal -->
      <div id="correlation-modal" class="hidden fixed inset-0 z-50 flex items-center justify-center bg-black/80">
        <div class="bg-[#1a1a1a] border border-n8n-border rounded-lg p-6 max-w-md mx-4 shadow-xl">
          <h3 class="text-lg font-semibold text-white mb-3">Understanding Correlation</h3>
          <p class="text-gray-400 text-sm mb-4">
            Correlation measures how two metrics move together over time. Values range from -1 to +1:
          </p>
          <ul class="text-sm space-y-2 mb-4">
            <li class="flex items-center gap-2">
              <span class="text-green-400 font-mono">+0.7 to +1.0</span>
              <span class="text-gray-400">Strong positive - metrics rise/fall together</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-yellow-400 font-mono">+0.3 to +0.7</span>
              <span class="text-gray-400">Moderate positive correlation</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-gray-400 font-mono">-0.3 to +0.3</span>
              <span class="text-gray-400">Weak/no correlation</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-orange-400 font-mono">-0.7 to -0.3</span>
              <span class="text-gray-400">Moderate negative correlation</span>
            </li>
            <li class="flex items-center gap-2">
              <span class="text-red-400 font-mono">-1.0 to -0.7</span>
              <span class="text-gray-400">Strong negative - one rises, other falls</span>
            </li>
          </ul>
          <p class="text-xs text-gray-500 mb-4">
            Note: Correlation does not imply causation. Two metrics may correlate due to a third factor or coincidence.
          </p>
          <button id="close-correlation-modal" class="w-full py-2 bg-n8n-primary text-white rounded text-sm hover:bg-n8n-primary/90">
            Got it
          </button>
        </div>
      </div>
    </div>
    </div> <!-- End mode-timeseries -->

    <!-- ============================================== -->
    <!-- DISTRIBUTION MODE -->
    <!-- ============================================== -->
    <div id="mode-distribution" class="mode-content hidden">
      <!-- Controls Card -->
      <div class="card mb-6">
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Data:</label>
            <select
              id="dist-source-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              {distributionSources.map(s => (
                <option value={s.id}>{s.label}</option>
              ))}
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Scale:</label>
            <select
              id="dist-scale-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <option value="linear">Linear</option>
              <option value="log">Logarithmic</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Chart Area -->
      <div class="card">
        <div id="dist-chart-container" class="relative h-[300px] md:h-[400px]">
          <canvas id="distribution-chart"></canvas>
          <div id="dist-loading" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
            <div class="flex items-center gap-3 text-gray-400">
              <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
              </svg>
              Loading data...
            </div>
          </div>
        </div>
        <!-- Stats -->
        <div id="dist-stats" class="grid grid-cols-2 md:grid-cols-4 gap-4 mt-4 pt-4 border-t border-n8n-border">
          <div class="text-center">
            <div class="text-2xl font-bold text-white" id="dist-stat-total">-</div>
            <div class="text-xs text-gray-500">Total</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-white" id="dist-stat-avg">-</div>
            <div class="text-xs text-gray-500">Average</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-white" id="dist-stat-median">-</div>
            <div class="text-xs text-gray-500">Median</div>
          </div>
          <div class="text-center">
            <div class="text-2xl font-bold text-white" id="dist-stat-max">-</div>
            <div class="text-xs text-gray-500">Max</div>
          </div>
        </div>
        <div id="dist-updated" class="text-center text-xs text-gray-500 mt-3"></div>
      </div>
    </div> <!-- End mode-distribution -->

    <!-- ============================================== -->
    <!-- RANKING MODE -->
    <!-- ============================================== -->
    <div id="mode-ranking" class="mode-content hidden">
      <!-- Controls Card -->
      <div class="card mb-6">
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Data:</label>
            <select
              id="rank-source-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              {rankingSources.map(s => (
                <option value={s.id}>{s.label}</option>
              ))}
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Metric:</label>
            <select
              id="rank-sort-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <!-- Populated by JS based on source -->
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Filter:</label>
            <select
              id="rank-filter-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <option value="">All</option>
              <!-- Populated by JS based on groups -->
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Show:</label>
            <select
              id="rank-limit-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <option value="10">Top 10</option>
              <option value="20" selected>Top 20</option>
              <option value="50">Top 50</option>
              <option value="100">Top 100</option>
            </select>
          </div>
        </div>
      </div>

      <!-- Chart + Table Area -->
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
        <!-- Bar Chart -->
        <div class="card">
          <h3 class="text-sm font-medium text-gray-300 mb-4">Chart</h3>
          <div id="rank-chart-container" class="relative h-[300px] md:h-[400px]">
            <canvas id="ranking-chart"></canvas>
            <div id="rank-loading" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
              <div class="flex items-center gap-3 text-gray-400">
                <svg class="animate-spin w-5 h-5" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                Loading...
              </div>
            </div>
          </div>
        </div>
        <!-- Data Table -->
        <div class="card">
          <h3 class="text-sm font-medium text-gray-300 mb-4">Data Table</h3>
          <div id="rank-table-container" class="overflow-x-auto max-h-[400px] overflow-y-auto">
            <table class="w-full text-sm">
              <thead id="rank-table-head" class="sticky top-0 bg-n8n-card">
                <!-- Populated by JS -->
              </thead>
              <tbody id="rank-table-body" class="divide-y divide-n8n-border">
                <!-- Populated by JS -->
              </tbody>
            </table>
          </div>
          <div id="rank-updated" class="text-center text-xs text-gray-500 mt-3"></div>
        </div>
      </div>
    </div> <!-- End mode-ranking -->

    <!-- ============================================== -->
    <!-- CORRELATION MODE -->
    <!-- ============================================== -->
    <div id="mode-correlation" class="mode-content hidden">
      <!-- Controls Card -->
      <div class="card mb-6">
        <div class="flex flex-wrap items-center gap-4">
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Data:</label>
            <select
              id="corr-source-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              {correlationSources.map(s => (
                <option value={s.id}>{s.label}</option>
              ))}
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">X-Axis:</label>
            <select
              id="corr-x-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <!-- Populated by JS -->
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="text-sm font-medium text-gray-300">Y-Axis:</label>
            <select
              id="corr-y-select"
              class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary"
            >
              <!-- Populated by JS -->
            </select>
          </div>
          <div class="flex items-center gap-3">
            <label class="flex items-center gap-2 text-sm text-gray-300 cursor-pointer">
              <input type="checkbox" id="corr-trend-check" checked class="rounded bg-n8n-darker border-n8n-border" />
              Show trend line
            </label>
          </div>
        </div>
      </div>

      <!-- Chart Area -->
      <div class="card">
        <div id="corr-chart-container" class="relative h-[350px] md:h-[450px]">
          <canvas id="correlation-chart"></canvas>
          <div id="corr-loading" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
