  async function loadDistributionData(): Promise<void> {
    const sourceId = distSourceSelect.value;
    const source = distributionSources.find((s: any) => s.id === sourceId);
    if (!source) return;

    distLoading.classList.remove('hidden');

    try {
      const rawData = await fetchCategoricalData(source.file);
      const field = source.distributionFields?.[0];
      if (!field) throw new Error('No distribution field defined');

      const dataArray = getNestedValue(rawData, field.dataPath);
      if (!Array.isArray(dataArray)) throw new Error('Data is not an array');

      let bins: { label: string; value: number; count: number }[];
      let total: number, avg: number, median: number, max: number;

      if (field.countKey) {
        // Pre-binned data
        bins = dataArray.map((item: any) => ({
          label: String(item[field.labelKey || field.valueKey]),
          value: Number(item[field.valueKey]),
          count: Number(item[field.countKey]),
        }));

        // Calculate stats from pre-binned data
        total = 0; let sum = 0; max = 0;
        const values: number[] = [];
        for (const bin of bins) {
          total += bin.count;
          sum += bin.value * bin.count;
          max = Math.max(max, bin.value);
          for (let i = 0; i < bin.count; i++) {
            values.push(bin.value);
          }
        }
        values.sort((a, b) => a - b);
        median = values.length > 0 ? values[Math.floor(values.length / 2)] : 0;
        avg = total > 0 ? Math.round(sum / total) : 0;
      } else {
        // Raw values - need to bin them
        const rawValues = dataArray.map((item: any) => Number(item[field.valueKey])).filter((v: number) => !isNaN(v));
        if (rawValues.length === 0) throw new Error('No valid values found');

        // Create histogram bins using Sturges' rule
        const numBins = Math.min(Math.ceil(Math.log2(rawValues.length) + 1), 15);
        const minVal = Math.min(...rawValues);
        const maxVal = Math.max(...rawValues);
        const binWidth = Math.ceil((maxVal - minVal) / numBins) || 1;

        // Count values in each bin
        const binCounts = new Map<number, number>();
        for (let i = 0; i < numBins; i++) binCounts.set(i, 0);
        for (const value of rawValues) {
          const binIndex = Math.min(Math.floor((value - minVal) / binWidth), numBins - 1);
          binCounts.set(binIndex, (binCounts.get(binIndex) || 0) + 1);
        }

        // Build bins array
        bins = Array.from(binCounts.entries()).map(([index, count]) => {
          const binMin = minVal + index * binWidth;
          const binMax = binMin + binWidth;
          return {
            label: binWidth === 1 ? String(binMin) : `${binMin}-${binMax - 1}`,
            value: binMin,
            count,
          };
        });

        // Calculate stats
        total = rawValues.length;
        const sum = rawValues.reduce((a: number, b: number) => a + b, 0);
        const sortedValues = [...rawValues].sort((a: number, b: number) => a - b);
        median = sortedValues[Math.floor(total / 2)];
        max = maxVal;
        avg = Math.round(sum / total);
      }

      // Update stats display
      distStatTotal.textContent = total.toLocaleString();
      distStatAvg.textContent = avg.toLocaleString();
      distStatMedian.textContent = median.toLocaleString();
      distStatMax.textContent = max.toLocaleString();

      // Update timestamp
      const lastUpdated = source.lastUpdatedPath ? getNestedValue(rawData, source.lastUpdatedPath) : null;
      distUpdated.textContent = lastUpdated ? `Last updated: ${new Date(lastUpdated).toLocaleDateString()}` : '';

      // Store for re-renders (e.g., scale changes)
      currentDistBins = bins;
      currentDistTitle = field.label;

      // Render chart
      renderDistributionChart(bins, field.label);

    } catch (error) {
      console.error('Failed to load distribution data:', error);
    } finally {
      distLoading.classList.add('hidden');
    }
