---
import BaseLayout from '@/layouts/BaseLayout.astro';
import { DATA_SOURCES, getAllMetrics } from '@/lib/playground/registry';

// Prepare metrics data for client-side
const metricsData = getAllMetrics();
const sourcesData = DATA_SOURCES.map(s => ({
  id: s.id,
  label: s.label,
  shortLabel: s.shortLabel,
  file: s.file,
  historyStart: s.historyStart,
  measuredSince: s.measuredSince,
}));
---

