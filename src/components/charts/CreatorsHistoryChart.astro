---
/**
 * Interactive Creators History Chart
 *
 * Renders Chart.js line/area chart for creator growth.
 * Data is loaded at build time for instant rendering.
 */

import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

interface CreatorStats {
  date: string;
  total: number;
  verified: number;
  totalViews: number;
  totalInserters: number;
}

interface CreatorsHistory {
  lastUpdated: string;
  dataSource: {
    name: string;
    repository: string;
    attribution: string;
  };
  daily: CreatorStats[];
  weekly: CreatorStats[];
}

interface ChartDataPoint {
  date: string;
  total: number;
  verified: number;
  newCount: number;
}

// Load data at build time
let chartDataPoints: ChartDataPoint[] = [];
try {
  const dataPath = join(process.cwd(), 'public', 'data', 'history', 'creators-stats.json');
  if (existsSync(dataPath)) {
    const data: CreatorsHistory = JSON.parse(readFileSync(dataPath, 'utf-8'));
    chartDataPoints = data.weekly.map((point, index) => {
      const prevTotal = index > 0 ? data.weekly[index - 1].total : point.total;
      return {
        date: point.date,
        total: point.total,
        verified: point.verified,
        newCount: Math.max(0, point.total - prevTotal),
      };
    });
  }
} catch (e) { /* use empty array */ }

const chartDataJson = JSON.stringify(chartDataPoints);
---

<div id="creators-chart-container" class="card">
  <!-- Controls -->
  <div class="flex flex-wrap items-center gap-4 mb-6">
    <!-- Date Range -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Range:</label>
      <select id="creators-date-range" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="12">Last 12 weeks</option>
        <option value="24" selected>Last 24 weeks</option>
        <option value="52">Last year</option>
        <option value="all">All time</option>
      </select>
    </div>

    <!-- Chart Type -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Type:</label>
      <select id="creators-chart-type" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="line">Line</option>
        <option value="area" selected>Area</option>
      </select>
    </div>

    <!-- Show Weekly New Toggle -->
    <label class="flex items-center gap-2 cursor-pointer">
      <input type="checkbox" id="creators-show-weekly" checked class="w-4 h-4 rounded border-gray-600 bg-n8n-darker text-n8n-primary focus:ring-n8n-primary focus:ring-offset-0">
      <span class="text-sm text-gray-400">Show weekly new</span>
    </label>
  </div>

  <!-- Chart Canvas -->
  <div class="relative h-[280px] md:h-[350px]">
    <canvas id="creators-history-chart"></canvas>
  </div>

  <!-- Legend -->
  <div id="creators-chart-legend" class="flex items-center justify-center gap-6 mt-4 text-sm">
    <div class="flex items-center gap-2">
      <span class="w-3 h-3 rounded-full bg-[#ff6d5a]"></span>
      <span class="text-gray-400">Total Creators</span>
    </div>
    <div id="creators-legend-weekly" class="flex items-center gap-2">
      <span class="w-3 h-3 rounded bg-[#4bc0c0]"></span>
      <span class="text-gray-400">New This Week</span>
    </div>
  </div>

  <!-- No Data State (only shown if build-time data is empty) -->
  <div id="creators-chart-no-data" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
    <span class="text-gray-400">No historical data yet. Check back tomorrow!</span>
  </div>
</div>

<script define:vars={{ chartDataJson }}>
  window.__creatorsChartData = JSON.parse(chartDataJson);
</script>

<script>
  import { Chart } from '../../lib/utils/chartRegistry';
  import { axisTruncationPlugin } from '../../lib/utils/chartPlugins';
  import { initChartWhenVisible } from '../../lib/utils/lazyChart';

  // Register project-specific plugin
  Chart.register(axisTruncationPlugin);

  interface ChartDataPoint {
    date: string;
    total: number;
    verified: number;
    newCount: number;
  }

  let creatorsChart: Chart | null = null;
  // Data is loaded at build time and passed via define:vars
  let chartData: ChartDataPoint[] = (window as any).__creatorsChartData || [];

  const COLORS = {
    total: { border: '#ff6d5a', background: 'rgba(255, 109, 90, 0.1)' },
    newCount: { border: '#4bc0c0', background: 'rgba(75, 192, 192, 0.6)' },
  };

  function isCreatorsAreaChart(): boolean {
    return (document.getElementById('creators-chart-type') as HTMLSelectElement).value === 'area';
  }

  function getCreatorsDateRange(): number | 'all' {
    const value = (document.getElementById('creators-date-range') as HTMLSelectElement).value;
    return value === 'all' ? 'all' : parseInt(value, 10);
  }

  function showWeekly(): boolean {
    return (document.getElementById('creators-show-weekly') as HTMLInputElement).checked;
  }

  function filterByWeeks(points: ChartDataPoint[], weeks: number | 'all'): ChartDataPoint[] {
    if (weeks === 'all') return points;
    return points.slice(-weeks);
  }

  function updateCreatorsChart() {
    if (chartData.length === 0) return;

    const isArea = isCreatorsAreaChart();
    const range = getCreatorsDateRange();
    const includeWeekly = showWeekly();

    const filteredData = filterByWeeks(chartData, range);

    // Show/hide weekly legend
    const weeklyLegend = document.getElementById('creators-legend-weekly');
    if (includeWeekly) {
      weeklyLegend?.classList.remove('hidden');
    } else {
      weeklyLegend?.classList.add('hidden');
    }

    const labels = filteredData.map(d => d.date);
    const datasets: any[] = [{
      label: 'Total Creators',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0.1,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
      yAxisID: 'y',
      type: 'line',
      order: 1,
    }];

    if (includeWeekly) {
      datasets.push({
        label: 'New This Week',
        data: filteredData.map(d => d.newCount),
        borderColor: COLORS.newCount.border,
        backgroundColor: COLORS.newCount.background,
        type: 'bar',
        yAxisID: 'y1',
        order: 2,
      });
    }

    if (creatorsChart) {
      creatorsChart.data.labels = labels;
      creatorsChart.data.datasets = datasets;
      if ((creatorsChart.options.scales as any)?.y1) {
        (creatorsChart.options.scales as any).y1.display = includeWeekly;
      }
      creatorsChart.update();
    }
  }

  function initCreatorsChart() {
    const canvas = document.getElementById('creators-history-chart') as HTMLCanvasElement;
    const noDataEl = document.getElementById('creators-chart-no-data');

    if (chartData.length === 0) {
      noDataEl?.classList.remove('hidden');
      return;
    }

    const isArea = isCreatorsAreaChart();
    const range = getCreatorsDateRange();
    const includeWeekly = showWeekly();

    const filteredData = filterByWeeks(chartData, range);
    const labels = filteredData.map(d => d.date);
    const datasets: any[] = [{
      label: 'Total Creators',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0.1,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
      yAxisID: 'y',
      type: 'line',
      order: 1,
    }];

    if (includeWeekly) {
      datasets.push({
        label: 'New This Week',
        data: filteredData.map(d => d.newCount),
        borderColor: COLORS.newCount.border,
        backgroundColor: COLORS.newCount.background,
        type: 'bar',
        yAxisID: 'y1',
        order: 2,
      });
    }

    creatorsChart = new Chart(canvas, {
      type: 'line',
      data: { labels, datasets },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          mode: 'index',
          intersect: false,
        },
        plugins: {
          legend: {
            display: false,
          },
          tooltip: {
            backgroundColor: '#1e1e1e',
            titleColor: '#fff',
            bodyColor: '#9ca3af',
            borderColor: '#333',
            borderWidth: 1,
            callbacks: {
              label: (context) => {
                const value = context.parsed.y;
                return `${context.dataset.label}: ${value.toLocaleString()}`;
              },
            },
          },
        },
        scales: {
          x: {
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: { color: '#9ca3af', maxRotation: 45 },
          },
          y: {
            type: 'linear',
            display: true,
            position: 'left',
            beginAtZero: false,
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: {
              color: '#9ca3af',
              callback: (value) => {
                if (typeof value === 'number') {
                  if (value >= 1000) return (value / 1000).toFixed(1) + 'K';
                }
                return value;
              },
            },
            title: {
              display: true,
              text: 'Total Creators',
              color: '#9ca3af',
            },
          },
          y1: {
            type: 'linear',
            display: includeWeekly,
            position: 'right',
            beginAtZero: true,
            grid: { drawOnChartArea: false },
            ticks: {
              color: '#4bc0c0',
            },
            title: {
              display: true,
              text: 'New / Week',
              color: '#4bc0c0',
            },
          },
        },
      },
    });

    // Attach event listeners
    document.getElementById('creators-date-range')?.addEventListener('change', updateCreatorsChart);
    document.getElementById('creators-chart-type')?.addEventListener('change', updateCreatorsChart);
    document.getElementById('creators-show-weekly')?.addEventListener('change', updateCreatorsChart);
  }

  // Initialize when DOM is ready and chart is visible
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initChartWhenVisible('creators-chart-container', initCreatorsChart);
    });
  } else {
    initChartWhenVisible('creators-chart-container', initCreatorsChart);
  }
</script>

<style>
  #creators-chart-container {
    position: relative;
  }
</style>
