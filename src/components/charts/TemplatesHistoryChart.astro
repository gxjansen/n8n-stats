---
/**
 * Interactive Templates History Chart
 *
 * Renders Chart.js line chart for cumulative template growth
 * with optional monthly new template bars overlay.
 * Data is loaded at build time for instant rendering.
 */

import { readFileSync, existsSync } from 'fs';
import { join } from 'path';

interface TimelinePoint {
  month: string;
  count: number;
  cumulative: number;
}

interface AllTemplatesData {
  timeline: {
    monthly: TimelinePoint[];
    firstTemplate: string;
    latestTemplate: string;
  };
}

interface ChartDataPoint {
  date: string;
  total: number;
  newCount: number;
}

// Load data at build time
let chartDataPoints: ChartDataPoint[] = [];
try {
  const dataPath = join(process.cwd(), 'public', 'data', 'all-templates-data.json');
  if (existsSync(dataPath)) {
    const data: AllTemplatesData = JSON.parse(readFileSync(dataPath, 'utf-8'));
    chartDataPoints = data.timeline.monthly.map(point => ({
      date: point.month,
      total: point.cumulative,
      newCount: point.count,
    }));
  }
} catch (e) { /* use empty array */ }

const chartDataJson = JSON.stringify(chartDataPoints);
---

<div id="templates-chart-container" class="card">
  <!-- Controls -->
  <div class="flex flex-wrap items-center gap-4 mb-6">
    <!-- Date Range -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Range:</label>
      <select id="templates-date-range" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="12">Last 12 months</option>
        <option value="24" selected>Last 24 months</option>
        <option value="36">Last 3 years</option>
        <option value="all">All time</option>
      </select>
    </div>

    <!-- Chart Type -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Type:</label>
      <select id="templates-chart-type" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="line">Line</option>
        <option value="area" selected>Area</option>
      </select>
    </div>

    <!-- Show Monthly Toggle -->
    <label class="flex items-center gap-2 cursor-pointer">
      <input type="checkbox" id="templates-show-monthly" checked class="w-4 h-4 rounded border-gray-600 bg-n8n-darker text-n8n-primary focus:ring-n8n-primary focus:ring-offset-0">
      <span class="text-sm text-gray-400">Show monthly new</span>
    </label>
  </div>

  <!-- Chart Canvas -->
  <div class="relative" style="height: 350px;">
    <canvas id="templates-history-chart"></canvas>
  </div>

  <!-- Legend (custom, shown when monthly is enabled) -->
  <div id="templates-chart-legend" class="flex items-center justify-center gap-6 mt-4 text-sm">
    <div class="flex items-center gap-2">
      <span class="w-3 h-3 rounded-full bg-[#ff6b9d]"></span>
      <span class="text-gray-400">Cumulative Total</span>
    </div>
    <div class="flex items-center gap-2">
      <span class="w-3 h-3 rounded bg-[#4bc0c0]"></span>
      <span class="text-gray-400">New This Month</span>
    </div>
  </div>

  <!-- No Data State (only shown if build-time data is empty) -->
  <div id="templates-chart-no-data" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
    <span class="text-gray-400">No historical data yet. Check back tomorrow!</span>
  </div>
</div>

<script define:vars={{ chartDataJson }}>
  window.__templatesChartData = JSON.parse(chartDataJson);
</script>

<script>
  import { Chart } from '../../lib/utils/chartRegistry';
  import { axisTruncationPlugin } from '../../lib/utils/chartPlugins';
  import { initChartWhenVisible } from '../../lib/utils/lazyChart';

  // Register project-specific plugin
  Chart.register(axisTruncationPlugin);

  interface ChartDataPoint {
    date: string;
    total: number;
    newCount: number;
  }

  let chart: Chart | null = null;
  // Data is loaded at build time and passed via define:vars
  let chartData: ChartDataPoint[] = (window as any).__templatesChartData || [];

  const COLORS = {
    total: { border: '#ff6b9d', background: 'rgba(255, 107, 157, 0.1)' },
    newCount: { border: '#4bc0c0', background: 'rgba(75, 192, 192, 0.6)' },
  };

  function filterByMonths(points: ChartDataPoint[], months: number | 'all'): ChartDataPoint[] {
    if (months === 'all') return points;
    // Return last N months
    return points.slice(-months);
  }

  function isAreaChart(): boolean {
    return (document.getElementById('templates-chart-type') as HTMLSelectElement).value === 'area';
  }

  function getDateRange(): number | 'all' {
    const value = (document.getElementById('templates-date-range') as HTMLSelectElement).value;
    return value === 'all' ? 'all' : parseInt(value, 10);
  }

  function showMonthly(): boolean {
    return (document.getElementById('templates-show-monthly') as HTMLInputElement).checked;
  }

  function updateChart() {
    if (chartData.length === 0) return;

    const range = getDateRange();
    const isArea = isAreaChart();
    const includeMonthly = showMonthly();

    const filteredData = filterByMonths(chartData, range);

    if (filteredData.length === 0) {
      document.getElementById('templates-chart-no-data')?.classList.remove('hidden');
      return;
    }
    document.getElementById('templates-chart-no-data')?.classList.add('hidden');

    // Show/hide legend based on monthly toggle
    const legendEl = document.getElementById('templates-chart-legend');
    if (includeMonthly) {
      legendEl?.classList.remove('hidden');
    } else {
      legendEl?.classList.add('hidden');
    }

    const labels = filteredData.map(d => d.date);
    const datasets: any[] = [{
      label: 'Total Templates',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0.1,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
      yAxisID: 'y',
      type: 'line',
      order: 1,
    }];

    // Add monthly bars if enabled
    if (includeMonthly) {
      datasets.push({
        label: 'New This Month',
        data: filteredData.map(d => d.newCount),
        borderColor: COLORS.newCount.border,
        backgroundColor: COLORS.newCount.background,
        type: 'bar',
        yAxisID: 'y1',
        order: 2,
      });
    }

    if (chart) {
      chart.data.labels = labels;
      chart.data.datasets = datasets;
      // Update scales visibility
      if ((chart.options.scales as any)?.y1) {
        (chart.options.scales as any).y1.display = includeMonthly;
      }
      chart.update();
    }
  }

  function initChart() {
    const canvas = document.getElementById('templates-history-chart') as HTMLCanvasElement;
    const noDataEl = document.getElementById('templates-chart-no-data');

    if (chartData.length === 0) {
      noDataEl?.classList.remove('hidden');
      return;
    }

    const range = getDateRange();
    const isArea = isAreaChart();
    const includeMonthly = showMonthly();

    const filteredData = filterByMonths(chartData, range);
    const labels = filteredData.map(d => d.date);
    const datasets: any[] = [{
      label: 'Total Templates',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0.1,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
      yAxisID: 'y',
      type: 'line',
      order: 1,
    }];

    if (includeMonthly) {
      datasets.push({
        label: 'New This Month',
        data: filteredData.map(d => d.newCount),
        borderColor: COLORS.newCount.border,
        backgroundColor: COLORS.newCount.background,
        type: 'bar',
        yAxisID: 'y1',
        order: 2,
      });
    }

    chart = new Chart(canvas, {
      type: 'line',
      data: { labels, datasets },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          mode: 'index',
          intersect: false,
        },
        plugins: {
          legend: {
            display: false,
          },
          tooltip: {
            backgroundColor: '#1e1e1e',
            titleColor: '#fff',
            bodyColor: '#9ca3af',
            borderColor: '#333',
            borderWidth: 1,
            callbacks: {
              label: (context) => {
                const value = context.parsed.y;
                return `${context.dataset.label}: ${value.toLocaleString()}`;
              },
            },
          },
        },
        scales: {
          x: {
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: { color: '#6b7280', maxRotation: 45 },
          },
          y: {
            type: 'linear',
            display: true,
            position: 'left',
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: {
              color: '#6b7280',
              callback: (value) => {
                if (typeof value === 'number') {
                  if (value >= 1000) return (value / 1000).toFixed(1) + 'K';
                }
                return value;
              },
            },
            title: {
              display: true,
              text: 'Cumulative Total',
              color: '#6b7280',
            },
          },
          y1: {
            type: 'linear',
            display: includeMonthly,
            position: 'right',
            grid: { drawOnChartArea: false },
            ticks: {
              color: '#4bc0c0',
            },
            title: {
              display: true,
              text: 'New / Month',
              color: '#4bc0c0',
            },
          },
        },
      },
    });

    // Attach event listeners
    document.getElementById('templates-date-range')?.addEventListener('change', updateChart);
    document.getElementById('templates-chart-type')?.addEventListener('change', updateChart);
    document.getElementById('templates-show-monthly')?.addEventListener('change', updateChart);
  }

  // Initialize when DOM is ready and chart is visible
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', () => {
      initChartWhenVisible('templates-chart-container', initChart);
    });
  } else {
    initChartWhenVisible('templates-chart-container', initChart);
  }
</script>

<style>
  #templates-chart-container {
    position: relative;
  }
</style>
