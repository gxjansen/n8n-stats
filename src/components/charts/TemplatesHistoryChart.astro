---
/**
 * Interactive Templates History Chart
 *
 * Client-side component that:
 * - Loads timeline data from /data/all-templates-data.json
 * - Renders Chart.js line chart for template growth over time
 * - Allows filtering by date range and chart type
 */
---

<div id="templates-chart-container" class="card">
  <!-- Controls -->
  <div class="flex flex-wrap items-center gap-4 mb-6">
    <!-- Date Range -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Range:</label>
      <select id="templates-date-range" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="12">Last 12 months</option>
        <option value="24">Last 24 months</option>
        <option value="36">Last 3 years</option>
        <option value="all" selected>All time</option>
      </select>
    </div>

    <!-- Chart Type -->
    <div class="flex items-center gap-2">
      <label class="text-sm text-gray-400">Type:</label>
      <select id="templates-chart-type" class="bg-n8n-darker border border-n8n-border rounded px-3 py-1.5 text-sm text-gray-300 focus:outline-none focus:border-n8n-primary">
        <option value="line" selected>Line</option>
        <option value="area">Area</option>
        <option value="bar">Bar</option>
      </select>
    </div>
  </div>

  <!-- Chart Canvas -->
  <div class="relative" style="height: 350px;">
    <canvas id="templates-history-chart"></canvas>
  </div>

  <!-- Loading/Error States -->
  <div id="templates-chart-loading" class="absolute inset-0 flex items-center justify-center bg-n8n-card/80">
    <span class="text-gray-400">Loading chart data...</span>
  </div>
  <div id="templates-chart-error" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
    <span class="text-red-400">Failed to load chart data</span>
  </div>
  <div id="templates-chart-no-data" class="hidden absolute inset-0 flex items-center justify-center bg-n8n-card/80">
    <span class="text-gray-400">No historical data yet. Check back tomorrow!</span>
  </div>
</div>

<script>
  import Chart from 'chart.js/auto';

  interface TimelinePoint {
    month: string;
    count: number;
    cumulative: number;
  }

  interface AllTemplatesData {
    timeline: {
      monthly: TimelinePoint[];
      firstTemplate: string;
      latestTemplate: string;
    };
  }

  interface ChartDataPoint {
    date: string;
    total: number;
    newCount: number;
  }

  let chart: Chart | null = null;
  let chartData: ChartDataPoint[] = [];

  const COLORS = {
    total: { border: '#ff6b9d', background: 'rgba(255, 107, 157, 0.1)' },
    newCount: { border: '#4bc0c0', background: 'rgba(75, 192, 192, 0.3)' },
  };

  async function loadData(): Promise<ChartDataPoint[]> {
    try {
      const response = await fetch('/data/all-templates-data.json');
      if (!response.ok) throw new Error('Failed to fetch');
      const data: AllTemplatesData = await response.json();

      // Convert timeline data to chart format
      return data.timeline.monthly.map(point => ({
        date: point.month,
        total: point.cumulative,
        newCount: point.count,
      }));
    } catch (error) {
      console.error('Failed to load templates data:', error);
      return [];
    }
  }

  function getDataForRange(data: TemplatesHistory, rangeDays: number | 'all'): TemplatesDataPoint[] {
    if (rangeDays === 'all') {
      return data.monthly;
    } else if (rangeDays <= 90) {
      return data.daily;
    } else if (rangeDays <= 365) {
      return data.weekly;
    } else {
      return data.monthly;
    }
  }

  function filterByDateRange(points: TemplatesDataPoint[], rangeDays: number | 'all'): TemplatesDataPoint[] {
    if (rangeDays === 'all') return points;

    const cutoff = new Date();
    cutoff.setDate(cutoff.getDate() - rangeDays);
    const cutoffStr = cutoff.toISOString().split('T')[0];

    return points.filter(p => p.date >= cutoffStr);
  }

  function getChartType(): 'line' | 'bar' {
    return (document.getElementById('templates-chart-type') as HTMLSelectElement).value as 'line' | 'bar';
  }

  function isAreaChart(): boolean {
    return (document.getElementById('templates-chart-type') as HTMLSelectElement).value === 'area';
  }

  function getDateRange(): number | 'all' {
    const value = (document.getElementById('templates-date-range') as HTMLSelectElement).value;
    return value === 'all' ? 'all' : parseInt(value, 10);
  }

  function updateChart() {
    if (!historyData) return;

    const range = getDateRange();
    const chartType = getChartType();
    const isArea = isAreaChart();

    const rawData = getDataForRange(historyData, range);
    const filteredData = filterByDateRange(rawData, range);

    if (filteredData.length === 0) {
      document.getElementById('templates-chart-no-data')?.classList.remove('hidden');
      return;
    }
    document.getElementById('templates-chart-no-data')?.classList.add('hidden');

    const labels = filteredData.map(d => d.date);
    const datasets = [{
      label: 'Total Templates',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
    }];

    if (chart) {
      chart.data.labels = labels;
      chart.data.datasets = datasets;
      chart.config.type = chartType === 'bar' ? 'bar' : 'line';
      chart.update();
    }
  }

  async function initChart() {
    const canvas = document.getElementById('templates-history-chart') as HTMLCanvasElement;
    const loadingEl = document.getElementById('templates-chart-loading');
    const errorEl = document.getElementById('templates-chart-error');
    const noDataEl = document.getElementById('templates-chart-no-data');

    historyData = await loadData();

    loadingEl?.classList.add('hidden');

    if (!historyData) {
      errorEl?.classList.remove('hidden');
      return;
    }

    if (historyData.daily.length === 0 && historyData.weekly.length === 0 && historyData.monthly.length === 0) {
      noDataEl?.classList.remove('hidden');
      return;
    }

    const range = getDateRange();
    const isArea = isAreaChart();

    const rawData = getDataForRange(historyData, range);
    const filteredData = filterByDateRange(rawData, range);
    const labels = filteredData.map(d => d.date);
    const datasets = [{
      label: 'Total Templates',
      data: filteredData.map(d => d.total),
      borderColor: COLORS.total.border,
      backgroundColor: isArea ? COLORS.total.background : COLORS.total.border,
      fill: isArea,
      tension: 0,
      pointRadius: filteredData.length > 60 ? 0 : 3,
      pointHoverRadius: 5,
    }];

    chart = new Chart(canvas, {
      type: 'line',
      data: { labels, datasets },
      options: {
        responsive: true,
        maintainAspectRatio: false,
        interaction: {
          mode: 'index',
          intersect: false,
        },
        plugins: {
          legend: {
            display: false,
          },
          tooltip: {
            backgroundColor: '#1e1e1e',
            titleColor: '#fff',
            bodyColor: '#9ca3af',
            borderColor: '#333',
            borderWidth: 1,
            callbacks: {
              label: (context) => {
                const value = context.parsed.y;
                return `${context.dataset.label}: ${value.toLocaleString()}`;
              },
            },
          },
        },
        scales: {
          x: {
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: { color: '#6b7280', maxRotation: 45 },
          },
          y: {
            type: 'linear',
            display: true,
            position: 'left',
            grid: { color: 'rgba(255,255,255,0.05)' },
            ticks: {
              color: '#6b7280',
              callback: (value) => {
                if (typeof value === 'number') {
                  if (value >= 1000) return (value / 1000).toFixed(1) + 'K';
                }
                return value;
              },
            },
          },
        },
      },
    });

    // Attach event listeners
    document.getElementById('templates-date-range')?.addEventListener('change', updateChart);
    document.getElementById('templates-chart-type')?.addEventListener('change', updateChart);
  }

  // Initialize when DOM is ready
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initChart);
  } else {
    initChart();
  }
</script>

<style>
  #templates-chart-container {
    position: relative;
  }
</style>
