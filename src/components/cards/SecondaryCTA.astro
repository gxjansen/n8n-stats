---

<section class="mt-12 mb-4">
  <div class="card bg-gradient-to-r from-n8n-primary/10 to-transparent border-n8n-primary/30">
    <div class="text-center">
      <h3 class="text-xl font-bold text-white mb-2">{title}</h3>
      <p class="text-gray-400 mb-6">{description}</p>

      <slot name="icon" />

      <div class="flex flex-wrap justify-center gap-4">
        {actions.map((action) => {
          const isExternal = action.external ?? action.href.startsWith('http');
          const iconSvg = action.icon ? platformIcons[action.icon] : (
            ['discord', 'reddit', 'bluesky', 'forum'].includes(action.variant)
              ? platformIcons[action.variant]
              : null
          );
          const viewBox = action.variant === 'bluesky' ? '0 0 600 530' : '0 0 24 24';

          return (
            <a
              href={action.href}
              target={isExternal ? '_blank' : undefined}
              rel={isExternal ? 'noopener noreferrer' : undefined}
              class:list={[
                'inline-flex items-center gap-2 px-6 py-3 rounded-lg font-medium transition-colors',
                variantStyles[action.variant],
              ]}
              data-umami-event="secondary-cta-click"
              data-umami-event-target={action.label.toLowerCase().replace(/\s+/g, '-')}
            >
              {iconSvg && (
                <svg class="w-5 h-5" fill="currentColor" viewBox={viewBox} set:html={iconSvg} />
              )}
              {action.label}
              {isExternal && !iconSvg && (
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              )}
            </a>
          );
        })}
      </div>
    </div>
  </div>
</section>
