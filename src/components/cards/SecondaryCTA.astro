/**
 * Secondary CTA component for page-specific calls to action.
 * Designed to sit above PlaygroundCTA with a lighter visual treatment.
 *
 * Usage:
 * <SecondaryCTA
 *   title="Become an Ambassador"
 *   description="Join our program"
 *   actions={[{ label: "Learn More", href: "...", variant: "primary" }]}
 * />
 */

interface Action {
  label: string;
  href: string;
  variant: 'primary' | 'secondary' | 'outline' | 'discord' | 'reddit' | 'bluesky' | 'forum';
  icon?: string;
  external?: boolean;
}

interface Props {
  title: string;
  description: string;
  actions: Action[];
}

const { title, description, actions } = Astro.props;

// Button variant styles
const variantStyles: Record<Action['variant'], string> = {
  primary: 'bg-n8n-primary text-white hover:bg-n8n-primary/90',
  secondary: 'bg-gray-700 text-white hover:bg-gray-600',
  outline: 'border border-gray-600 text-gray-300 hover:border-gray-500 hover:text-white',
  discord: 'bg-[#5865F2] text-white hover:bg-[#4752C4]',
  reddit: 'bg-[#ff4500] text-white hover:bg-[#e03d00]',
  bluesky: 'bg-[#0085ff] text-white hover:bg-[#0077e6]',
  forum: 'bg-n8n-primary text-white hover:bg-n8n-primary/90',
