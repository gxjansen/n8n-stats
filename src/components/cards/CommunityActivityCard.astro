---
import { formatNumber } from '@/lib/utils/formatters';
import SourceInfo from '@/components/SourceInfo.astro';

interface SourceAttribution {
  source: string;
  url?: string;
  note?: string;
}

interface Props {
  discordMembers: number;
  discordOnline: number;
  forumUsers: number;
  forumTopics: number;
  redditSubscribers?: number;
  redditGrowth?: string;
  source?: SourceAttribution;
}

const { discordMembers, discordOnline, forumUsers, forumTopics, redditSubscribers, redditGrowth, source } = Astro.props;

// Calculate total community (include Reddit if available)
const totalCommunity = discordMembers + forumUsers + (redditSubscribers || 0);
---

<a
  href="/discussions"
  class="card block hover:border-n8n-primary/50 hover:bg-gray-800/30 transition-all group relative"
>
  {source && (
    <SourceInfo source={source.source} url={source.url} note={source.note} />
  )}
  <!-- Header -->
  <div class="flex items-center gap-3 mb-4">
    <div class="w-10 h-10 rounded-lg bg-green-500/10 flex items-center justify-center">
      <svg class="w-5 h-5 text-green-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
      </svg>
    </div>
    <div>
      <h3 class="font-semibold text-white group-hover:text-n8n-primary transition-colors">
        Community
      </h3>
      <p class="text-xs text-gray-500">Discord, Forum{redditSubscribers ? ' & Reddit' : ''}</p>
    </div>
  </div>

  <!-- Total community -->
  <div class="mb-4">
    <div class="text-2xl font-bold text-white">{formatNumber(totalCommunity)}</div>
    <div class="text-sm text-gray-400">total members</div>
  </div>

  <!-- Platform breakdown -->
  <div class={`grid gap-3 mb-4 ${redditSubscribers ? 'grid-cols-3' : 'grid-cols-2'}`}>
    <!-- Discord -->
    <div class="p-3 rounded-lg bg-gray-800/50">
      <div class="flex items-center gap-2 mb-1">
        <svg class="w-4 h-4 text-indigo-400" viewBox="0 0 24 24" fill="currentColor">
          <path d="M20.317 4.37a19.791 19.791 0 0 0-4.885-1.515.074.074 0 0 0-.079.037c-.21.375-.444.864-.608 1.25a18.27 18.27 0 0 0-5.487 0 12.64 12.64 0 0 0-.617-1.25.077.077 0 0 0-.079-.037A19.736 19.736 0 0 0 3.677 4.37a.07.07 0 0 0-.032.027C.533 9.046-.32 13.58.099 18.057a.082.082 0 0 0 .031.057 19.9 19.9 0 0 0 5.993 3.03.078.078 0 0 0 .084-.028 14.09 14.09 0 0 0 1.226-1.994.076.076 0 0 0-.041-.106 13.107 13.107 0 0 1-1.872-.892.077.077 0 0 1-.008-.128 10.2 10.2 0 0 0 .372-.292.074.074 0 0 1 .077-.01c3.928 1.793 8.18 1.793 12.062 0a.074.074 0 0 1 .078.01c.12.098.246.198.373.292a.077.077 0 0 1-.006.127 12.299 12.299 0 0 1-1.873.892.077.077 0 0 0-.041.107c.36.698.772 1.362 1.225 1.993a.076.076 0 0 0 .084.028 19.839 19.839 0 0 0 6.002-3.03.077.077 0 0 0 .032-.054c.5-5.177-.838-9.674-3.549-13.66a.061.061 0 0 0-.031-.03zM8.02 15.33c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.956-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.956 2.418-2.157 2.418zm7.975 0c-1.183 0-2.157-1.085-2.157-2.419 0-1.333.955-2.419 2.157-2.419 1.21 0 2.176 1.096 2.157 2.42 0 1.333-.946 2.418-2.157 2.418z"/>
        </svg>
        <span class="text-xs text-gray-400">Discord</span>
      </div>
      <div class="text-lg font-semibold text-white">{formatNumber(discordMembers)}</div>
      <div class="flex items-center gap-1 text-xs text-green-400">
        <span class="w-2 h-2 rounded-full bg-green-400 animate-pulse"></span>
        {formatNumber(discordOnline)} online
      </div>
    </div>

    <!-- Forum -->
    <div class="p-3 rounded-lg bg-gray-800/50">
      <div class="flex items-center gap-2 mb-1">
        <svg class="w-4 h-4 text-blue-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
        </svg>
        <span class="text-xs text-gray-400">Forum</span>
      </div>
      <div class="text-lg font-semibold text-white">{formatNumber(forumUsers)}</div>
      <div class="text-xs text-gray-500">
        {formatNumber(forumTopics)} topics
      </div>
    </div>

    <!-- Reddit -->
    {redditSubscribers && (
      <div class="p-3 rounded-lg bg-gray-800/50">
        <div class="flex items-center gap-2 mb-1">
          <svg class="w-4 h-4 text-orange-500" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
          </svg>
          <span class="text-xs text-gray-400">Reddit</span>
        </div>
        <div class="text-lg font-semibold text-white">{formatNumber(redditSubscribers)}</div>
        {redditGrowth && (
          <div class="text-xs text-orange-400">
            {redditGrowth}
          </div>
        )}
      </div>
    )}
  </div>

  <!-- CTA -->
  <div class="flex items-center gap-1 text-n8n-primary text-sm font-medium group-hover:gap-2 transition-all">
    <span>View community stats</span>
    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
    </svg>
  </div>
</a>
