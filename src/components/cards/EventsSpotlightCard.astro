---
import { formatNumber } from '@/lib/utils/formatters';
import SourceInfo from '@/components/SourceInfo.astro';

interface SourceAttribution {
  source: string;
  url?: string;
  note?: string;
}

interface Event {
  id: string;
  name: string;
  url?: string;
  startDate: string;
  location: {
    name?: string;
    city?: string;
    country?: string;
  };
  isOnline: boolean;
  registrations?: number;
}

interface Props {
  upcomingEvents: Event[];
  totalUpcoming: number;
  countriesCount: number;
  maxEvents?: number;
  source?: SourceAttribution;
}

const { upcomingEvents, totalUpcoming, countriesCount, maxEvents = 3, source } = Astro.props;

// Get next events (default 3 for homepage, can be customized)
const nextEvents = upcomingEvents.slice(0, maxEvents);
---

<div class="relative">
  {source && (
    <SourceInfo source={source.source} url={source.url} note={source.note} />
  )}
  <!-- Header matching /events page style -->
  <div class="flex items-center justify-between mb-6">
    <div class="flex items-center gap-3">
      <svg class="w-6 h-6 text-n8n-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
      <h2 class="text-2xl font-bold text-white">Upcoming Events</h2>
    </div>
    <a
      href="https://lu.ma/n8n-events"
      target="_blank"
      rel="noopener noreferrer"
      class="text-sm text-n8n-primary hover:underline flex items-center gap-1 pr-5"
    >
      View all on Luma
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
      </svg>
    </a>
  </div>

  <!-- Events list matching /events page style -->
  {nextEvents.length > 0 && (
    <div class="space-y-3">
      {nextEvents.map((event) => (
        <a
          href={event.url || `https://lu.ma/n8n-events`}
          target="_blank"
          rel="noopener noreferrer"
          class="card block hover:border-n8n-primary/50 hover:bg-gray-800/30 transition-all group py-3"
        >
          <div class="flex flex-col md:flex-row md:items-center gap-3">
            {/* Date Badge */}
            <div class="flex-shrink-0 text-center md:w-16">
              <div class="inline-block md:block bg-n8n-primary/20 rounded-lg px-2 py-1">
                <div class="text-n8n-primary font-bold">
                  {new Date(event.startDate).getDate()}
                </div>
                <div class="text-xs text-gray-400 uppercase">
                  {new Date(event.startDate).toLocaleDateString('en-US', { month: 'short' })}
                </div>
              </div>
            </div>

            {/* Event Details */}
            <div class="flex-grow min-w-0">
              <h3 class="text-white font-semibold group-hover:text-n8n-primary transition-colors truncate text-sm">
                {event.name}
              </h3>
              <div class="flex flex-wrap items-center gap-x-3 gap-y-1 mt-1 text-xs text-gray-400">
                <span class="flex items-center gap-1">
                  <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  {event.isOnline ? 'Online' : `${event.location.city || event.location.name}${event.location.country ? `, ${event.location.country}` : ''}`}
                </span>
                {event.registrations && event.registrations > 0 && (
                  <span class="flex items-center gap-1">
                    <svg class="w-3 h-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                    </svg>
                    {formatNumber(event.registrations)} registered
                  </span>
                )}
              </div>
            </div>

            {/* Arrow */}
            <div class="flex-shrink-0 hidden md:block">
              <svg class="w-4 h-4 text-gray-600 group-hover:text-n8n-primary transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
          </div>
        </a>
      ))}
    </div>
  )}

  {upcomingEvents.length > maxEvents && (
    <p class="text-center text-gray-400 mt-4 text-sm">
      +{upcomingEvents.length - maxEvents} more events on <a href="https://lu.ma/n8n-events" target="_blank" rel="noopener" class="text-n8n-primary hover:underline">Luma</a>
    </p>
  )}

  {nextEvents.length === 0 && (
    <div class="card text-center py-8">
      <p class="text-gray-400">No upcoming events scheduled.</p>
      <a
        href="https://lu.ma/n8n-events"
        target="_blank"
        rel="noopener noreferrer"
        class="text-n8n-primary hover:underline mt-2 inline-block"
      >
        Check the n8n events calendar
      </a>
    </div>
  )}
</div>
