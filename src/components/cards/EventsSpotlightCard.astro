---
import { formatNumber } from '@/lib/utils/formatters';

interface Event {
  id: string;
  name: string;
  startDate: string;
  location: {
    city: string;
    country: string;
  };
  isOnline: boolean;
  registrations?: number;
}

interface Props {
  upcomingEvents: Event[];
  totalUpcoming: number;
  countriesCount: number;
}

const { upcomingEvents, totalUpcoming, countriesCount } = Astro.props;

// Get next 2 events
const nextEvents = upcomingEvents.slice(0, 2);

// Format date nicely
function formatEventDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
  });
}

// Truncate event name
function truncateName(name: string, maxLen: number = 35): string {
  if (name.length <= maxLen) return name;
  return name.slice(0, maxLen).trim() + '...';
}
---

<a
  href="/events"
  class="card block hover:border-n8n-primary/50 hover:bg-gray-800/30 transition-all group"
>
  <div>
    <!-- Header with icon and stats -->
    <div class="flex items-center justify-between mb-4">
      <div class="flex items-center gap-3">
        <div class="w-10 h-10 rounded-lg bg-purple-500/10 flex items-center justify-center">
          <svg class="w-5 h-5 text-purple-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
        </div>
        <div>
          <h3 class="font-semibold text-white group-hover:text-n8n-primary transition-colors">
            Community Events
          </h3>
          <p class="text-xs text-gray-500">Meetups & Workshops</p>
        </div>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold text-white">{totalUpcoming}</div>
        <div class="text-xs text-gray-500">upcoming</div>
      </div>
    </div>

    <!-- Stats row -->
    <div class="flex items-center gap-4 mb-4 text-sm">
      <span class="text-gray-400">
        <span class="text-white font-medium">{countriesCount}</span> countries
      </span>
      <span class="text-gray-600">|</span>
      <span class="text-gray-400">Global community</span>
    </div>

    <!-- Next events list -->
    {nextEvents.length > 0 && (
      <div class="space-y-2 mb-4">
        {nextEvents.map((event) => (
          <div class="flex items-center gap-3 p-2 rounded-lg bg-gray-800/50">
            <div class="text-center min-w-[50px]">
              <div class="text-sm font-semibold text-purple-400">{formatEventDate(event.startDate)}</div>
            </div>
            <div class="flex-1 min-w-0">
              <div class="text-sm text-white truncate">{truncateName(event.name)}</div>
              <div class="text-xs text-gray-500">
                {event.isOnline ? 'Online' : event.location.city}
              </div>
            </div>
            {event.registrations && event.registrations > 100 && (
              <div class="text-xs text-gray-500 shrink-0">
                {formatNumber(event.registrations)} registered
              </div>
            )}
          </div>
        ))}
      </div>
    )}

    <!-- CTA -->
    <div class="flex items-center gap-1 text-n8n-primary text-sm font-medium group-hover:gap-2 transition-all">
      <span>See all events</span>
      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
      </svg>
    </div>
  </div>
</a>
