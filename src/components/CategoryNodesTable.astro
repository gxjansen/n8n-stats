---
/**
 * Category Nodes Table
 *
 * Compact table showing top nodes per category with clickable links.
 * More readable than grouped bar chart, shows all names visible.
 * Supports weighted scores when available.
 */

import { formatNumber, getNodePageUrl } from '@/lib/utils/formatters';

interface NodeData {
  displayName: string;
  count: number;
  category: string;
  weightedScore?: number;
  avgInserters?: number;
}

interface Props {
  data: Record<string, NodeData[]>;
  categoryOrder: string[];
  categoryColors: Record<string, string>;
  nodesPerCategory?: number;
  showWeighted?: boolean;
}

const { data, categoryOrder, categoryColors, nodesPerCategory = 5, showWeighted = false } = Astro.props;

// Filter to categories with data
const categoriesWithData = categoryOrder.filter(cat => data[cat]?.length > 0);

// Determine what value to use for bar widths
const getValue = (node: NodeData) => showWeighted && node.weightedScore ? node.weightedScore : node.count;
---

<div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-4">
  {categoriesWithData.map((category) => {
    const nodes = data[category].slice(0, nodesPerCategory);
    const color = categoryColors[category] || '#7c8798';
    const categoryMax = getValue(nodes[0]) || 1;

    return (
      <div class="card p-4">
        <h3 class="text-sm font-semibold text-white mb-3 flex items-center gap-2">
          <span class="w-2.5 h-2.5 rounded-sm flex-shrink-0" style={`background: ${color}`}></span>
          <span class="truncate">{category}</span>
          <span class="text-xs font-normal text-gray-500 ml-auto">{data[category].length} nodes</span>
        </h3>
        <div class="space-y-2">
          {nodes.map((node: NodeData, index: number) => {
            const nodeValue = getValue(node);
            const barWidth = (nodeValue / categoryMax) * 100;
            const hasWeighted = showWeighted && node.weightedScore && node.weightedScore > 0;
            return (
              <a
                href={getNodePageUrl(node.displayName)}
                class="block group"
              >
                <div class="flex items-center gap-2 text-xs">
                  <span class="text-gray-500 w-4 flex-shrink-0">{index + 1}.</span>
                  <span class="text-gray-300 group-hover:text-white transition-colors truncate flex-1 min-w-0">
                    {node.displayName}
                  </span>
                  {hasWeighted ? (
                    <span class="text-cyan-400/80 flex-shrink-0 tabular-nums" title={`${formatNumber(node.count)} templates`}>
                      ~{formatNumber(node.weightedScore!)}
                    </span>
                  ) : (
                    <span class="text-gray-500 flex-shrink-0 tabular-nums">
                      {formatNumber(node.count)}
                    </span>
                  )}
                </div>
                <div class="relative h-1 bg-gray-800 rounded-full overflow-hidden mt-1 ml-6">
                  <div
                    class="absolute inset-y-0 left-0 rounded-full transition-all duration-300 group-hover:opacity-70"
                    style={`width: ${barWidth}%; background: ${color};`}
                  />
                </div>
              </a>
            );
          })}
        </div>
        {data[category].length > nodesPerCategory && (
          <p class="text-[10px] text-gray-600 mt-2 ml-6">
            +{data[category].length - nodesPerCategory} more
          </p>
        )}
      </div>
    );
  })}
</div>
