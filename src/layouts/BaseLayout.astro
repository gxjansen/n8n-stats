---
import '@/styles/global.css';
import { n8nUrls } from '@/lib/utils/formatters';
import PlaygroundCTA from '@/components/PlaygroundCTA.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Community health dashboard and ecosystem explorer for n8n' } = Astro.props;

// Get current path to conditionally show PlaygroundCTA
const currentPath = Astro.url.pathname;
const showPlaygroundCTA = currentPath !== '/playground' && currentPath !== '/playground/';

// Build timestamp for "last data update" in footer
const buildTime = new Date();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | n8n Pulse</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
  </head>
  <body class="min-h-screen bg-n8n-darker">
    <header class="border-b border-n8n-border">
      <nav class="container-narrow py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="flex items-center gap-2 text-xl font-bold text-white">
            <img src="/logo.svg" alt="n8n Pulse logo" class="h-8 w-8" />
            n8n Pulse
          </a>

          <div class="flex items-center gap-6">
            <a href="/templates" class="text-gray-300 hover:text-white transition-colors">
              Templates
            </a>
            <a href="/nodes" class="text-gray-300 hover:text-white transition-colors">
              Nodes
            </a>
            <a href="/creators" class="text-gray-300 hover:text-white transition-colors">
              Creators
            </a>
            <a href="/community" class="text-gray-300 hover:text-white transition-colors">
              Community
            </a>
            <a href="/events" class="text-gray-300 hover:text-white transition-colors">
              Events
            </a>
            <a href="/github" class="text-gray-300 hover:text-white transition-colors">
              GitHub
            </a>
            <a href="/playground" class="text-n8n-primary hover:text-n8n-primary/80 font-medium transition-colors flex items-center gap-1">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Playground
            </a>
          </div>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    {showPlaygroundCTA && <PlaygroundCTA />}

    <footer class="border-t border-n8n-border mt-16">
      <div class="container-narrow py-8">
        <div class="flex flex-col md:flex-row items-center justify-between gap-4 text-sm text-gray-400">
          <p>
            Made by <a href="https://gui.do" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">Guido X Jansen</a>
          </p>
          <p class="text-gray-500">
            Last data update: {buildTime.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              timeZoneName: 'short'
            })}
          </p>
          <div class="flex items-center gap-4">
            <a href={n8nUrls.home()} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
              n8n.io
            </a>
            <a href="https://n8narena.com/" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
              n8n Arena
            </a>
            <a href="https://gui.do" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
              gui.do
            </a>
            <a href="https://github.com/gxjansen/n8n-stats/issues" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors">
              Feedback & Issues
            </a>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
