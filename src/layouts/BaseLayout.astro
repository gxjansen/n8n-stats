---
import '@/styles/global.css';
import { ClientRouter, fade } from 'astro:transitions';
import { n8nUrls } from '@/lib/utils/formatters';
import PlaygroundCTA from '@/components/PlaygroundCTA.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = 'Community health dashboard and ecosystem explorer for n8n' } = Astro.props;

// Get current path to conditionally show PlaygroundCTA
const currentPath = Astro.url.pathname;
const showPlaygroundCTA = currentPath !== '/playground' && currentPath !== '/playground/';

// Build timestamp for "last data update" in footer
const buildTime = new Date();
---

<!doctype html>
<html lang="en" transition:name="root" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Guido X Jansen" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title} | n8n Pulse</title>

    <!-- Canonical URL -->
    <link rel="canonical" href={`https://n8n-pulse.gui.do${Astro.url.pathname}`} />

    <!-- Open Graph / Social Sharing -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={`https://n8n-pulse.gui.do${Astro.url.pathname}`} />
    <meta property="og:title" content={`${title} | n8n Pulse`} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content="https://n8n-pulse.gui.do/og-image.png" />
    <meta property="og:site_name" content="n8n Pulse by gui.do" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={`${title} | n8n Pulse`} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content="https://n8n-pulse.gui.do/og-image.png" />
    <meta name="twitter:creator" content="@guido" />

    <!-- Fonts - self-hosted Inter, preloaded for faster FCP -->
    <link rel="preload" href="/fonts/inter-latin.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Umami Analytics -->
    <script defer src="https://u.a11y.nl/script.js" data-website-id="c1686c78-37c4-4773-a663-a9bc7f9a6fbb"></script>

    <!-- View Transitions -->
    <ClientRouter />

    <!-- Custom loading indicator - shows immediately on navigation -->
    <style>
      #nav-loading-bar {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 3px;
        background: #ff6d5a;
        z-index: 9999;
        transform: scaleX(0);
        transform-origin: left;
        opacity: 0;
        pointer-events: none;
      }
      #nav-loading-bar.loading {
        opacity: 1;
        animation: loading-progress 2s ease-out forwards;
      }
      #nav-loading-bar.done {
        transform: scaleX(1);
        opacity: 0;
        transition: opacity 0.2s ease-out;
      }
      @keyframes loading-progress {
        0% { transform: scaleX(0); }
        20% { transform: scaleX(0.3); }
        50% { transform: scaleX(0.6); }
        100% { transform: scaleX(0.9); }
      }
    </style>
  </head>
  <body class="min-h-screen bg-n8n-darker">
    <!-- Loading indicator bar -->
    <div id="nav-loading-bar"></div>

    <script is:inline>
      (function() {
        var bar = document.getElementById('nav-loading-bar');
        if (!bar) return;

        // Show loading bar immediately when navigation starts
        document.addEventListener('astro:before-preparation', function() {
          bar.classList.remove('done');
          bar.classList.add('loading');
        });

        // Complete the loading bar when page swap happens
        document.addEventListener('astro:after-swap', function() {
          bar.classList.remove('loading');
          bar.classList.add('done');
          // Reset after animation completes
          setTimeout(function() {
            bar.classList.remove('done');
          }, 300);
        });

        // Re-attach to new bar element after page swap (View Transitions)
        document.addEventListener('astro:page-load', function() {
          bar = document.getElementById('nav-loading-bar');
        });
      })();
    </script>

    <header class="border-b border-n8n-border">
      <nav class="container-narrow py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-2">
            <a href="/" class="flex items-center gap-2 text-xl font-bold text-white" data-astro-reload data-umami-event="nav-click" data-umami-event-target="home-logo">
              <img src="/logo.svg" alt="n8n Pulse logo" class="h-8 w-8" />
              n8n Pulse
            </a>
            <a href="https://gui.do" target="_blank" rel="noopener noreferrer" class="hidden sm:inline text-xs text-gray-500 hover:text-gray-300 transition-colors" data-umami-event="external-click" data-umami-event-target="gui-do-header">
              by gui.do
            </a>
          </div>

          <!-- Mobile: hamburger button -->
          <button
            id="mobile-menu-toggle"
            class="md:hidden p-2 text-gray-300 hover:text-white transition-colors"
            aria-label="Toggle navigation menu"
            aria-expanded="false"
            aria-controls="mobile-menu"
          >
            <svg id="hamburger-icon" class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            <svg id="close-icon" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
            </svg>
          </button>

          <!-- Desktop: horizontal nav -->
          <div class="hidden md:flex items-center gap-6">
            <a href="/templates" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="templates">
              Templates
            </a>
            <a href="/nodes" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="nodes">
              Nodes
            </a>
            <a href="/creators" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="creators">
              Creators
            </a>
            <a href="/ambassadors" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="ambassadors">
              Ambassadors
            </a>
            <a href="/discussions" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="discussions">
              Discussions
            </a>
            <a href="/events" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="events">
              Events
            </a>
            <a href="/dev" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="dev">
              Dev
            </a>
            <a href="/market" class="text-gray-300 hover:text-white transition-colors" data-umami-event="nav-click" data-umami-event-target="market">
              Market
            </a>
            <a href="/playground" class="text-n8n-primary hover:text-n8n-primary/80 font-medium transition-colors flex items-center gap-1" data-umami-event="nav-click" data-umami-event-target="playground">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Playground
            </a>
          </div>
        </div>

        <!-- Mobile: dropdown menu -->
        <!-- data-astro-reload forces full page navigation instead of View Transitions -->
        <!-- This fixes touch navigation issues on some mobile browsers (Android/iOS) -->
        <div id="mobile-menu" class="md:hidden hidden mt-4 pb-2 border-t border-n8n-border pt-4">
          <div class="flex flex-col gap-3">
            <a href="/templates" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="templates-mobile">
              Templates
            </a>
            <a href="/nodes" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="nodes-mobile">
              Nodes
            </a>
            <a href="/creators" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="creators-mobile">
              Creators
            </a>
            <a href="/ambassadors" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="ambassadors-mobile">
              Ambassadors
            </a>
            <a href="/discussions" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="discussions-mobile">
              Discussions
            </a>
            <a href="/events" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="events-mobile">
              Events
            </a>
            <a href="/dev" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="dev-mobile">
              Dev
            </a>
            <a href="/market" class="text-gray-300 hover:text-white transition-colors py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="market-mobile">
              Market
            </a>
            <a href="/playground" class="text-n8n-primary hover:text-n8n-primary/80 font-medium transition-colors flex items-center gap-1 py-2" data-astro-reload data-umami-event="nav-click" data-umami-event-target="playground-mobile">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
              </svg>
              Playground
            </a>
          </div>
        </div>
      </nav>
    </header>

    <!-- Mobile menu toggle script -->
    <script is:inline>
      // Mobile menu initialization function
      function initMobileMenu() {
        const toggle = document.getElementById('mobile-menu-toggle');
        const menu = document.getElementById('mobile-menu');
        const hamburgerIcon = document.getElementById('hamburger-icon');
        const closeIcon = document.getElementById('close-icon');

        if (!toggle || !menu || !hamburgerIcon || !closeIcon) return;

        // Reset menu state on page load (important for View Transitions)
        menu.classList.add('hidden');
        hamburgerIcon.classList.remove('hidden');
        closeIcon.classList.add('hidden');
        toggle.setAttribute('aria-expanded', 'false');

        // Remove existing listeners to prevent duplicates
        const newToggle = toggle.cloneNode(true);
        toggle.parentNode.replaceChild(newToggle, toggle);

        // Re-get the cloned element
        const freshToggle = document.getElementById('mobile-menu-toggle');

        freshToggle.addEventListener('click', function(e) {
          e.preventDefault();
          const isOpen = !menu.classList.contains('hidden');

          if (isOpen) {
            menu.classList.add('hidden');
            hamburgerIcon.classList.remove('hidden');
            closeIcon.classList.add('hidden');
            freshToggle.setAttribute('aria-expanded', 'false');
          } else {
            menu.classList.remove('hidden');
            hamburgerIcon.classList.add('hidden');
            closeIcon.classList.remove('hidden');
            freshToggle.setAttribute('aria-expanded', 'true');
          }

          // Track menu toggle in Umami
          if (typeof umami !== 'undefined') {
            umami.track('nav-mobile-toggle', { action: isOpen ? 'close' : 'open' });
          }
        });

        // Force navigation for mobile menu links using JavaScript
        // Firefox mobile has issues with View Transitions - this bypasses everything
        menu.querySelectorAll('a').forEach(function(link) {
          link.addEventListener('click', function(e) {
            var href = link.getAttribute('href');
            if (href) {
              e.preventDefault();
              e.stopPropagation();
              window.location.href = href;
            }
          });
          // Also handle touchend for mobile
          link.addEventListener('touchend', function(e) {
            var href = link.getAttribute('href');
            if (href) {
              e.preventDefault();
              e.stopPropagation();
              window.location.href = href;
            }
          });
        });

        // Also fix the logo link for mobile
        var logoLink = document.querySelector('a[data-umami-event-target="home-logo"]');
        if (logoLink) {
          logoLink.addEventListener('touchend', function(e) {
            e.preventDefault();
            e.stopPropagation();
            window.location.href = '/';
          });
        }
      }

      // Run on initial page load
      initMobileMenu();

      // Re-run after View Transitions navigation (Astro's page swap event)
      document.addEventListener('astro:page-load', initMobileMenu);
    </script>

    <main transition:animate={fade({ duration: '0.15s' })}>
      <slot />
    </main>

    {showPlaygroundCTA && <PlaygroundCTA />}

    <footer class="border-t border-n8n-border mt-16">
      <div class="container-narrow py-8">
        <!-- Row 1: Made by + Links -->
        <div class="flex flex-col items-center gap-4 text-sm text-gray-400">
          <p>
            Made by <a href="https://gui.do" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors" data-umami-event="external-click" data-umami-event-target="gui-do-footer">Guido X Jansen</a>
          </p>
          <div class="grid grid-cols-2 md:flex md:items-center gap-x-6 gap-y-2 text-center">
            <a href={n8nUrls.home()} target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors whitespace-nowrap" data-umami-event="external-click" data-umami-event-target="n8n-io">
              n8n.io
            </a>
            <a href="https://n8narena.com/" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors whitespace-nowrap" data-umami-event="external-click" data-umami-event-target="n8n-arena">
              n8n Arena
            </a>
            <a href="https://gui.do" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors whitespace-nowrap" data-umami-event="external-click" data-umami-event-target="gui-do">
              gui.do
            </a>
            <a href="https://github.com/gxjansen/n8n-stats/issues" target="_blank" rel="noopener noreferrer" class="hover:text-white transition-colors whitespace-nowrap" data-umami-event="external-click" data-umami-event-target="feedback-issues">
              Feedback & Issues
            </a>
          </div>
        </div>
        <!-- Row 2: Data update + Privacy -->
        <div class="flex flex-col md:flex-row items-center justify-between gap-2 text-xs text-gray-500 mt-4">
          <p>
            Last data update: {buildTime.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric',
              hour: '2-digit',
              minute: '2-digit',
              timeZoneName: 'short'
            })}
          </p>
          <p>
            Privacy-friendly analytics by <a href="https://umami.is" target="_blank" rel="noopener noreferrer" class="hover:text-gray-400 transition-colors">Umami</a> (self-hosted, no cookies, GDPR-compliant)
          </p>
        </div>
      </div>
    </footer>

    <!-- Error tracking with Umami -->
    <script is:inline>
      (function() {
        // Wait for Umami to load
        function trackError(type, data) {
          if (typeof umami !== 'undefined') {
            umami.track(type, data);
          }
        }

        // Track JavaScript errors
        window.addEventListener('error', function(event) {
          // Skip errors from extensions or cross-origin scripts
          if (!event.filename || event.filename.includes('extension://')) return;

          trackError('js-error', {
            message: (event.message || 'Unknown error').slice(0, 200),
            file: (event.filename || '').split('/').pop() || 'unknown',
            line: event.lineno || 0,
            col: event.colno || 0,
            url: window.location.pathname,
          });
        });

        // Track unhandled promise rejections
        window.addEventListener('unhandledrejection', function(event) {
          var reason = event.reason;
          var message = 'Promise rejected';

          if (reason) {
            if (typeof reason === 'string') {
              message = reason;
            } else if (reason.message) {
              message = reason.message;
            }
          }

          trackError('promise-error', {
            message: message.slice(0, 200),
            url: window.location.pathname,
          });
        });

        // Track resource load failures (images, scripts, etc.)
        window.addEventListener('error', function(event) {
          var target = event.target;
          if (target && (target.tagName === 'IMG' || target.tagName === 'SCRIPT' || target.tagName === 'LINK')) {
            var src = target.src || target.href || '';
            // Skip analytics script failures (expected with ad blockers)
            if (src.includes('u.a11y.nl')) return;
            trackError('resource-error', {
              type: target.tagName.toLowerCase(),
              src: src.slice(0, 200),
              url: window.location.pathname,
            });
          }
        }, true); // Use capture to catch resource errors
      })();
    </script>
  </body>
</html>
